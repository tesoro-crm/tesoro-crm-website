---
import Layout from '../../layouts/Layout.astro';
import RelatedPosts from '../../components/blog/RelatedPosts.astro';
import SectionRenderer from '../../components/blog/SectionRenderer.astro';
import { getCollection } from 'astro:content';
import { getLocale } from '../../i18n/utils';
import type { Language } from '../../types/blog';
import { formatDate, getSectionTitle, generateStructuredData, generateFAQStructuredData } from '../../utils/blogHelpers';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Filter out drafts and create paths
  const paths = posts
    .filter(post => !post.data.meta.draft)
    .map(post => ({
      params: { slug: post.data.meta.id },
      props: { post },
    }));

  return paths;
}

const { post } = Astro.props;
const blogData = post.data;
const locale: Language = (getLocale(Astro.currentLocale, Astro.url) as Language) || 'nl';

// Get localized content
const title = blogData.hero.title[locale];
const description = blogData.hero.description[locale];
const heroImage = blogData.hero.image;
const author = blogData.meta.author;
const publishDate = formatDate(blogData.hero.publishDate, locale);

// Generate TOC from sections
const tocItems = blogData.sections
  .filter(section => section.title || section.type === 'introduction')
  .map(section => ({
    id: section.id,
    title: getSectionTitle(section, locale)
  }));

// Generate structured data
const structuredData = generateStructuredData(blogData, locale, Astro.url.href);
const faqStructuredData = generateFAQStructuredData(blogData, locale);
---

<Layout
  title={`${title} | Tesoro CRM Blog`}
  description={description}
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  {faqStructuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(faqStructuredData)} />
  )}

  <article class="blog-article">
    <div class="blog-article__container">
      <header class="blog-article__header">
        <div class="blog-article__meta">
          <span class="blog-article__category">{blogData.meta.category}</span>
          <time class="blog-article__date" datetime={blogData.hero.publishDate}>
            {publishDate}
          </time>
          {blogData.meta.readingTime && (
            <span class="blog-article__reading-time">
              {blogData.meta.readingTime} min {locale === 'nl' ? 'lezen' : locale === 'es' ? 'lectura' : 'read'}
            </span>
          )}
        </div>

        <h1 class="blog-article__title">{title}</h1>
        <p class="blog-article__description">{description}</p>

        <div class="blog-article__hero">
          <img
            class="blog-article__hero-image"
            src={heroImage.src}
            alt={heroImage.alt[locale]}
            loading="eager"
            width={heroImage.width || 1200}
            height={heroImage.height || 600}
          />
        </div>

        <div class="blog-article__author">
          <img
            class="blog-article__author-avatar"
            src={author.image}
            alt={author.name}
            loading="eager"
            width="56"
            height="56"
          />
          <div class="blog-article__author-info">
            <div class="blog-article__author-name">{author.name}</div>
            <div class="blog-article__author-bio">{author.bio[locale]}</div>
          </div>
        </div>

        {blogData.meta.aiGenerated && (
          <div class="blog-article__ai-badge" role="note" aria-label="AI generated content">
            ü§ñ {locale === 'nl' ? 'AI-Gegenereerde Content' : locale === 'es' ? 'Contenido Generado por IA' : 'AI-Generated Content'}
            {blogData.meta.aiPrompt && (
              <details class="blog-article__ai-details">
                <summary>{locale === 'nl' ? 'Bekijk AI Prompt' : locale === 'es' ? 'Ver Prompt de IA' : 'View AI Prompt'}</summary>
                <code>{blogData.meta.aiPrompt}</code>
              </details>
            )}
          </div>
        )}
      </header>

      <div class="blog-article__content-wrapper">
        <main class="blog-article__main">
          {blogData.sections.map(section => (
            <SectionRenderer section={section} lang={locale} />
          ))}
        </main>

        <aside class="blog-article__sidebar">
          <nav class="blog-article__toc" aria-labelledby="toc-heading">
            <h2 id="toc-heading" class="blog-article__toc-title">
              {locale === 'nl' ? 'Inhoudsopgave' : locale === 'es' ? 'Tabla de Contenidos' : 'Table of Contents'}
            </h2>
            <ol class="blog-article__toc-list">
              {tocItems.map(item => (
                <li class="blog-article__toc-item">
                  <a href={`#${item.id}`} class="blog-article__toc-link">{item.title}</a>
                </li>
              ))}
            </ol>
          </nav>
        </aside>
      </div>

      <RelatedPosts currentPost={post} locale={locale} />

      <footer class="blog-article__footer">
        <div class="blog-article__tags" aria-label="Article tags">
          {blogData.meta.tags.map(tag => (
            <span class="blog-article__tag">#{tag}</span>
          ))}
        </div>

        <div class="blog-article__share" aria-label="Share this article">
          <h3 class="blog-article__share-title">
            {locale === 'nl' ? 'Deel dit artikel' : locale === 'es' ? 'Comparte este art√≠culo' : 'Share this article'}
          </h3>
          <div class="blog-article__share-buttons">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="blog-article__share-button blog-article__share-button--twitter"
              aria-label={locale === 'nl' ? 'Deel op Twitter' : locale === 'es' ? 'Compartir en Twitter' : 'Share on Twitter'}
            >
              üê¶ Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="blog-article__share-button blog-article__share-button--linkedin"
              aria-label={locale === 'nl' ? 'Deel op LinkedIn' : locale === 'es' ? 'Compartir en LinkedIn' : 'Share on LinkedIn'}
            >
              üíº LinkedIn
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="blog-article__share-button blog-article__share-button--facebook"
              aria-label={locale === 'nl' ? 'Deel op Facebook' : locale === 'es' ? 'Compartir en Facebook' : 'Share on Facebook'}
            >
              üìò Facebook
            </a>
            <button
              class="blog-article__share-button blog-article__share-button--copy"
              onclick={`navigator.clipboard.writeText('${Astro.url.href}')`}
              aria-label={locale === 'nl' ? 'Kopieer link' : locale === 'es' ? 'Copiar enlace' : 'Copy link'}
            >
              üìã {locale === 'nl' ? 'Kopieer Link' : locale === 'es' ? 'Copiar Enlace' : 'Copy Link'}
            </button>
          </div>
        </div>

        <div class="blog-article__newsletter" aria-labelledby="newsletter-heading">
          <h3 id="newsletter-heading" class="blog-article__newsletter-title">
            {locale === 'nl' ? 'Blijf op de hoogte' : locale === 'es' ? 'Mantente informado' : 'Stay informed'}
          </h3>
          <p class="blog-article__newsletter-description">
            {locale === 'nl' 
              ? 'Krijg de laatste inzichten over CRM en vastgoedmarketing in je inbox.'
              : locale === 'es'
              ? 'Recibe las √∫ltimas perspectivas sobre CRM y marketing inmobiliario en tu bandeja de entrada.'
              : 'Get the latest insights on CRM and real estate marketing in your inbox.'}
          </p>
          <form class="blog-article__newsletter-form" data-newsletter-form aria-label={locale === 'nl' ? 'Nieuwsbrief aanmelden' : locale === 'es' ? 'Suscribirse al bolet√≠n' : 'Newsletter signup'}>
            <label for="newsletter-email" class="sr-only">
              {locale === 'nl' ? 'Email adres' : locale === 'es' ? 'Correo electr√≥nico' : 'Email address'}
            </label>
            <input
              id="newsletter-email"
              type="email"
              placeholder={locale === 'nl' ? 'Jouw email adres' : locale === 'es' ? 'Tu correo electr√≥nico' : 'Your email address'}
              required
              class="blog-article__newsletter-input"
              aria-describedby="newsletter-description"
            />
            <button type="submit" class="blog-article__newsletter-submit">
              {locale === 'nl' ? 'Abonneren' : locale === 'es' ? 'Suscribirse' : 'Subscribe'}
            </button>
          </form>
          <p id="newsletter-description" class="blog-article__newsletter-privacy">
            {locale === 'nl' 
              ? 'We respecteren je privacy. Afmelden kan altijd.'
              : locale === 'es'
              ? 'Respetamos tu privacidad. Puedes darte de baja en cualquier momento.'
              : 'We respect your privacy. Unsubscribe anytime.'}
          </p>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<script>
  // Newsletter signup
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('[data-newsletter-form]') as HTMLFormElement;
    if (!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
      const email = emailInput?.value;

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });

        if (response.ok) {
          alert('Thanks for subscribing! Check your email.');
          form.reset();
        } else {
          alert('Something went wrong. Please try again.');
        }
      } catch (error) {
        alert('Something went wrong. Please try again.');
      }
    });
  });
</script>

