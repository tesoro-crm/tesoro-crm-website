---
import type { TakeawaysSection, Language } from '../../../types/blog';

interface Props {
  section: TakeawaysSection;
  lang: Language;
}

const { section, lang } = Astro.props;
const title = section.title?.[lang];
const items = section.items.map(item => item[lang]);
---

<section class="blog-section blog-section--takeaways" id={section.id}>
  {title && <h2 class="blog-section__title">{title}</h2>}
  
  <div class="takeaways-box">
    <ul class="takeaways-list">
      {items.map((item) => (
        <li class="takeaways-list__item">{item}</li>
      ))}
    </ul>
  </div>
</section>

<style>
  .blog-section--takeaways {
    margin: 3rem 0;
  }

  .blog-section__title {
    font-size: 2rem;
    font-weight: 700;
    color: #0f172a;
    margin-bottom: 1.5rem;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  .takeaways-box {
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    border: 2px solid #22c55e;
    border-radius: 12px;
    padding: 2rem 2.5rem;
  }

  .takeaways-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .takeaways-list__item {
    position: relative;
    padding-left: 2rem;
    font-size: 1.0625rem;
    line-height: 1.6;
    color: #14532d;
    font-weight: 500;
  }

  .takeaways-list__item::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    top: 0;
    font-size: 1.25rem;
    color: #22c55e;
    font-weight: 700;
  }

  @media (max-width: 640px) {
    .takeaways-box {
      padding: 1.5rem 1.75rem;
    }

    .takeaways-list__item {
      font-size: 1rem;
    }
  }
</style>
