>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary via-primary-dark to-primary-light text-white py-20 lg:py-32 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 right-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-secondary rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="text-center lg:text-left">
          <Badge variant="secondary" size="md" class="mb-6">
            {t('home.hero.badge', locale)}
          </Badge>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
            {t('home.hero.title', locale).split(' ').slice(0, -1).join(' ')} <span class="text-secondary">{t('home.hero.title', locale).split(' ').slice(-1)}</span>
          </h1>
          
          <p class="text-lg sm:text-xl text-white/90 mb-8 max-w-2xl mx-auto lg:mx-0">
            {t('home.hero.description', locale)}
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <Button variant="secondary" size="lg" href="/signup">
              {t('home.hero.cta_primary', locale)}
            </Button>
            <Button variant="outline" size="lg" href="/demo">
              {t('home.hero.cta_secondary', locale)}
            </Button>
          </div>
          
          <div class="flex items-center gap-6 mt-8 text-sm text-white/80 justify-center lg:justify-start">
            <span class="flex items-center gap-2">
              <span class="text-secondary text-xl">âœ“</span>
              {t('home.hero.trust_1', locale)}
            </span>
            <span class="flex items-center gap-2">
              <span class="text-secondary text-xl">âœ“</span>
              {t('home.hero.trust_2', locale)}
            </span>
            <span class="flex items-center gap-2">
              <span class="text-secondary text-xl">âœ“</span>
              {t('home.hero.trust_3', locale)}
            </span>
          </div>
        </div>
        <div class="hidden lg:block">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-secondary/20 to-primary-accent/20 rounded-2xl blur-2xl"></div>
            <Card variant="elevated" class="relative backdrop-blur-sm bg-white/10 border-white/20">
              <div class="aspect-video bg-gradient-to-br from-neutral-100 to-neutral-200 rounded-lg flex items-center justify-center">
                <span class="text-6xl">ðŸ“Š</span>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="bg-white border-b border-neutral-200 py-8">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
        {stats.map((stat) => (
          <div>
            <div class="text-4xl font-display font-bold text-primary mb-2">{stat.value}</div>
            <div class="text-neutral-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Proof -->
  <section class="bg-neutral-50 py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <p class="text-neutral-600 mb-6">{t('home.social_proof.title', locale)}</p>
      <div class="flex flex-wrap items-center justify-center gap-8 opacity-60">
        <div class="text-2xl font-bold text-neutral-400">Funda</div>
        <div class="text-2xl font-bold text-neutral-400">Idealista</div>
        <div class="text-2xl font-bold text-neutral-400">Kyero</div>
        <div class="text-2xl font-bold text-neutral-400">Fotocasa</div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.features.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.features.description', locale)}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <Card variant="default" padding="lg" class="hover:-translate-y-1 transition-transform duration-200">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-display font-semibold text-neutral-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-neutral-600">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.testimonials.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.testimonials.subtitle', locale)}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <Card variant="default" padding="lg" class="flex flex-col">
            <p class="text-neutral-700 mb-6 flex-grow italic">"{testimonial.quote}"</p>
            <div class="flex items-center gap-4">
              <div class="text-4xl">{testimonial.image}</div>
              <div>
                <div class="font-semibold text-neutral-900">{testimonial.author}</div>
                <div class="text-sm text-neutral-600">{testimonial.role}</div>
                <div class="text-sm text-neutral-500">{testimonial.company}</div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Demo Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-4">
            {t('home.demo.badge', locale)}
          </Badge>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            {t('home.demo.title', locale)}
          </h2>
          <p class="text-lg text-neutral-600 mb-8">
            {t('home.demo.description', locale)}
          </p>
          <ul class="space-y-4 mb-8">
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_1', locale)}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_2', locale)}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_3', locale)}</span>
            </li>
          </ul>
          <Button variant="primary" size="lg" href="/demo">
            {t('home.demo.cta', locale)}
          </Button>
        </div>
        <div>
          <Card variant="elevated" class="aspect-video bg-gradient-to-br from-neutral-100 to-neutral-200 flex items-center justify-center">
            <span class="text-6xl">ðŸŽ¬</span>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.faq.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600">
          {t('home.faq.subtitle', locale)}
        </p>
      </div>
      
      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card variant="default" padding="lg">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">{faq.question}</h3>
            <p class="text-neutral-600">{faq.answer}</p>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-4">{t('home.faq.more_questions', locale)}</p>
        <Button variant="outline" href="/contact">
          {t('home.faq.contact_cta', locale)}
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-primary-accent text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('home.final_cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('home.final_cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="/signup">
          {t('home.final_cta.cta_primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href="/pricing" class="border-2 border-white hover:bg-white hover:text-primary">
          {t('home.final_cta.cta_secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
