const workflow = [
  {
    step: '1',
    title: 'Klant Account Aanmaken',
    description: 'Maak een persoonlijk account aan voor je klant met hun voorkeuren.',
  },
  {
    step: '2',
    title: 'Properties Toewijzen',
    description: 'Wijs specifieke properties toe aan klanten via smart matching of handmatig.',
  },
  {
