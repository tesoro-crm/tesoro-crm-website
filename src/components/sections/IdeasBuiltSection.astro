---
import type { Language } from '../../i18n/types';
import { getLocale, loadTranslations, t } from '../../i18n/utils';

// Get current locale
const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);

// Translation keys
const headline = t('home.ideas_built_section.headline', locale);
const body = t('home.ideas_built_section.body', locale);
const flowStep1 = t('home.ideas_built_section.flow_step_1', locale);
const flowStep2 = t('home.ideas_built_section.flow_step_2', locale);
const flowStep3 = t('home.ideas_built_section.flow_step_3', locale);
const timeline = t('home.ideas_built_section.timeline', locale);
---

<section class="ideas-built-section">
  <div class="ideas-built-section__container">
    <div class="ideas-built-section__content">
      <h2 class="ideas-built-section__headline">{headline}</h2>
      <p class="ideas-built-section__body">{body}</p>

      <!-- Feedback to Feature Visual -->
      <div class="ideas-built-section__visual">
        <div class="feedback-flow">
          <div class="feedback-flow__step">
            <div class="feedback-flow__icon feedback-flow__icon--feedback">
              <span class="material-symbols-outlined">chat_bubble</span>
            </div>
            <span class="feedback-flow__label">{flowStep1}</span>
          </div>

          <div class="feedback-flow__arrow">
            <span class="material-symbols-outlined">arrow_forward</span>
          </div>

          <div class="feedback-flow__step">
            <div class="feedback-flow__icon feedback-flow__icon--review">
              <span class="material-symbols-outlined">groups</span>
            </div>
            <span class="feedback-flow__label">{flowStep2}</span>
          </div>

          <div class="feedback-flow__arrow">
            <span class="material-symbols-outlined">arrow_forward</span>
          </div>

          <div class="feedback-flow__step">
            <div class="feedback-flow__icon feedback-flow__icon--feature">
              <span class="material-symbols-outlined">new_releases</span>
            </div>
            <span class="feedback-flow__label">{flowStep3}</span>
          </div>
        </div>

        <div class="ideas-built-section__timeline">
          <span class="material-symbols-outlined">schedule</span>
          <span class="ideas-built-section__timeline-text">{timeline}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.ideas-built-section {
  padding: 5rem 1.5rem;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
}

.ideas-built-section__container {
  max-width: 900px;
  margin: 0 auto;
}

.ideas-built-section__content {
  text-align: center;
}

.ideas-built-section__headline {
  font-size: clamp(2rem, 4vw, 2.5rem);
  font-weight: 700;
  color: #0a1f44;
  line-height: 1.2;
  margin: 0 0 1.5rem 0;
  letter-spacing: -0.02em;
}

.ideas-built-section__body {
  font-size: clamp(1.0625rem, 1.85vw, 1.125rem);
  color: #475569;
  line-height: 1.65;
  margin: 0 0 3rem 0;
  max-width: 42rem;
  margin-left: auto;
  margin-right: auto;
}

/* Feedback Flow Visual */
.ideas-built-section__visual {
  margin-top: 3rem;
}

.feedback-flow {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1.5rem;
  margin-bottom: 2rem;
  flex-wrap: wrap;
}

.feedback-flow__step {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.75rem;
  animation: fadeInUp 0.6s ease-out backwards;
}

.feedback-flow__step:nth-child(1) { animation-delay: 0.1s; }
.feedback-flow__step:nth-child(3) { animation-delay: 0.3s; }
.feedback-flow__step:nth-child(5) { animation-delay: 0.5s; }

.feedback-flow__icon {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.feedback-flow__icon--feedback {
  background: linear-gradient(135deg, #003366 0%, #0047b3 100%);
  color: white;
}

.feedback-flow__icon--review {
  background: linear-gradient(135deg, #f59e0b 0%, #f59e0b 100%);
  color: white;
}

.feedback-flow__icon--feature {
  background: linear-gradient(135deg, #00a870 0%, #008f5f 100%);
  color: white;
}

.feedback-flow__icon .material-symbols-outlined {
  font-size: 2.5rem;
}

.feedback-flow__icon:hover {
  transform: translateY(-4px) scale(1.05);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}

.feedback-flow__label {
  font-size: 0.9375rem;
  font-weight: 600;
  color: #334155;
  text-align: center;
}

.feedback-flow__arrow {
  color: #cbd5e1;
  font-size: 2rem;
  animation: fadeIn 0.6s ease-out backwards;
}

.feedback-flow__arrow:nth-of-type(2) { animation-delay: 0.2s; }
.feedback-flow__arrow:nth-of-type(4) { animation-delay: 0.4s; }

.feedback-flow__arrow .material-symbols-outlined {
  font-size: 2rem;
}

/* Timeline */
.ideas-built-section__timeline {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: #f3fff8;
  border: 1px solid #86efac;
  border-radius: 100px;
  color: #00a870;
  font-weight: 600;
  font-size: 0.9375rem;
  animation: fadeInUp 0.6s ease-out 0.7s backwards;
}

.ideas-built-section__timeline .material-symbols-outlined {
  font-size: 1.25rem;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .ideas-built-section {
    padding: 4rem 1.25rem;
  }

  .ideas-built-section__headline {
    font-size: clamp(1.75rem, 5vw, 2rem);
    margin-bottom: 1.25rem;
  }

  .ideas-built-section__body {
    font-size: 1rem;
    margin-bottom: 2.5rem;
  }

  .feedback-flow {
    gap: 1rem;
  }

  .feedback-flow__icon {
    width: 64px;
    height: 64px;
  }

  .feedback-flow__icon .material-symbols-outlined {
    font-size: 2rem;
  }

  .feedback-flow__arrow .material-symbols-outlined {
    font-size: 1.5rem;
  }

  .feedback-flow__label {
    font-size: 0.875rem;
  }

  .ideas-built-section__timeline {
    font-size: 0.875rem;
    padding: 0.625rem 1.25rem;
  }
}

@media (max-width: 480px) {
  .ideas-built-section {
    padding: 3rem 1rem;
  }

  .ideas-built-section__headline {
    font-size: 1.5rem;
    line-height: 1.3;
  }

  .ideas-built-section__body {
    font-size: 0.9375rem;
  }

  .feedback-flow {
    flex-direction: column;
    gap: 1.5rem;
  }

  .feedback-flow__arrow {
    transform: rotate(90deg);
  }

  .feedback-flow__icon {
    width: 72px;
    height: 72px;
  }

  .feedback-flow__icon .material-symbols-outlined {
    font-size: 2.25rem;
  }
}
</style>
