---
import Button from '../ui/Button.astro';
import Card from '../ui/Card.astro';
import SectionHeader from '../ui/SectionHeader.astro';
import { Image } from 'astro:assets';
import { t, getLocalizedPath } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

// Import website screenshots - filenames use underscore format (e.g., domain_com.png)
// The domain is automatically extracted from the filename for the URL
import deluxehomesjavea_com from '../../assets/websites/deluxehomesjavea_com.png';
import elialiving_es from '../../assets/websites/elialiving_es.png';
import momentsestates_com from '../../assets/websites/momentsestates_com.png';
import ca_realestates_com from '../../assets/websites/ca-realestates_com.png';

export interface Props {
  locale: Language;
}

const { locale } = Astro.props;

// Array of delivered websites - real client sites only
// URL is derived from the import name (e.g., 'deluxehomesjavea_com' -> 'deluxehomesjavea.com')
const websites = [
  {
    name: 'Elia Living',
    url: 'elialiving.es',
    screenshot: elialiving_es,
    alt: 'Elia Living - Real Estate Website'
  },
  {
    name: 'Deluxe Homes Javea',
    url: 'deluxehomesjavea.com',
    screenshot: deluxehomesjavea_com,
    alt: 'Deluxe Homes Javea - Real Estate Website'
  },
  {
    name: 'Moments Estates',
    url: 'momentsestates.com',
    screenshot: momentsestates_com,
    alt: 'Moments Estates - Real Estate Website'
  },
  {
    name: 'Cynthia Anthonio Real Estate',
    url: 'ca-realestates.com',
    screenshot: ca_realestates_com,
    alt: 'Cynthia Anthonio Real Estate - Real Estate Website'
  },
];
---

<section class="py-16 lg:py-24 bg-gradient-to-br from-neutral-50 via-white to-neutral-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <SectionHeader
      badge={t('home.website_showcase.badge', locale)}
      badgeVariant="default"
      title={t('home.website_showcase.title', locale)}
      description={t('home.website_showcase.description', locale)}
      size="md"
      alignment="center"
      class="mb-12"
    />

    <!-- Split Layout: Visual + Benefits -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center mb-12">
      <!-- Left: Visual Preview -->
      <div class="relative">
        <!-- Browser Mockup -->
        <div class="bg-white rounded-2xl shadow-2xl border border-neutral-200 overflow-hidden website-showcase-carousel">
          <!-- Browser Chrome -->
          <div class="bg-neutral-100 px-4 py-3 border-b border-neutral-200 flex items-center gap-2">
            <div class="flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <div class="flex-1 bg-white rounded-md px-3 py-1 text-xs text-neutral-500 mx-4 website-url">
              {websites[0].url}
            </div>
          </div>

          <!-- Website Screenshots Carousel -->
          <div class="relative aspect-[16/10] bg-neutral-100 overflow-hidden">
            {websites.map((website, index) => (
              <div
                class={`website-slide absolute inset-0 transition-opacity duration-1000 ${index === 0 ? 'opacity-100' : 'opacity-0'}`}
                data-index={index}
              >
                <a
                  href={`https://${website.url}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="block w-full h-full group cursor-pointer"
                  aria-label={`Visit ${website.name} website`}
                >
                  <Image
                    src={website.screenshot}
                    alt={website.alt}
                    class="w-full h-full object-cover object-top transition-transform duration-300 group-hover:scale-105"
                    loading={index === 0 ? "eager" : "lazy"}
                    widths={[800, 1200, 1600, 1920]}
                    sizes="(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 800px"
                    format="webp"
                    quality={85}
                  />
                  <!-- Hover overlay -->
                  <div class="absolute inset-0 bg-primary bg-opacity-0 group-hover:bg-opacity-10 transition-all duration-300 flex items-center justify-center">
                    <span class="icon text-white text-4xl opacity-0 group-hover:opacity-100 transition-opacity duration-300">open_in_new</span>
                  </div>
                </a>
              </div>
            ))}
          </div>
        </div>

        <!-- Floating Performance Badge -->
        <div class="absolute -bottom-6 -right-6 bg-white rounded-2xl shadow-xl border-2 border-secondary p-4 lg:p-6">
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-success mb-1">100</div>
            <div class="text-xs text-neutral-600 font-semibold uppercase tracking-wide">Lighthouse Score</div>
          </div>
        </div>
      </div>

      <!-- Right: Key Benefits -->
      <div class="space-y-6">
        {[1, 2, 3, 4].map((num) => (
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-primary to-primary-accent rounded-xl flex items-center justify-center shadow-lg">
              <span class="icon benefit-icon !text-white text-xl">
                {num === 1 ? 'palette' : num === 2 ? 'speed' : num === 3 ? 'shield' : 'devices'}
              </span>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">
                {t(`home.website_showcase.benefit_${num}_title`, locale)}
              </h3>
              <p class="text-sm text-neutral-700">
                {t(`home.website_showcase.benefit_${num}_description`, locale)}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Tech Stack Pills with Animated Gradient -->
    <div class="tech-stack-container mb-8">
      <div class="tech-stack-wrapper">
        {[
          { key: 'astro', name: 'Astro', icon: 'rocket_launch' },
          { key: 'payload', name: 'PayloadCMS', icon: 'edit_note' },
          { key: 'cloudflare', name: 'Cloudflare', icon: 'cloud' },
          { key: 'speed', name: '100/100 Speed', icon: 'speed' },
          { key: 'seo', name: 'SEO Optimized', icon: 'search' },
        ].map((tech, index) => (
          <div class="tech-pill-wrapper" style={`animation-delay: ${index * 0.2}s`}>
            <div class="tech-pill">
              <span class="icon text-sm">{tech.icon}</span>
              <span class="text-sm font-medium">{tech.name}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center">
      <Button variant="primary" size="lg" href={getLocalizedPath('/website-services', locale)} icon="arrow_forward" iconPosition="end">
        {t('home.website_showcase.cta_button', locale)}
      </Button>
    </div>
  </div>
</section>

<script define:vars={{ websites }}>
  // Carousel logic
  let currentIndex = 0;
  let intervalId = null;
  let isPaused = false;

  const carousel = document.querySelector('.website-showcase-carousel');
  const slides = document.querySelectorAll('.website-slide');
  const urlDisplay = document.querySelector('.website-url');

  const showSlide = (index) => {
    slides.forEach((slide, i) => {
      if (i === index) {
        slide.classList.remove('opacity-0');
        slide.classList.add('opacity-100');
      } else {
        slide.classList.remove('opacity-100');
        slide.classList.add('opacity-0');
      }
    });

    // Update URL in browser chrome
    if (urlDisplay) {
      urlDisplay.textContent = websites[index].url;
    }
  };

  const nextSlide = () => {
    if (isPaused) return;
    currentIndex = (currentIndex + 1) % websites.length;
    showSlide(currentIndex);
  };

  // Start carousel
  const startCarousel = () => {
    if (intervalId) clearInterval(intervalId);
    intervalId = setInterval(nextSlide, 5000); // Change every 5 seconds
  };

  // Pause on hover
  if (carousel) {
    carousel.addEventListener('mouseenter', () => {
      isPaused = true;
    });

    carousel.addEventListener('mouseleave', () => {
      isPaused = false;
    });

    // Pause on touch for mobile
    carousel.addEventListener('touchstart', () => {
      isPaused = true;
    });

    carousel.addEventListener('touchend', () => {
      setTimeout(() => {
        isPaused = false;
      }, 3000); // Resume after 3 seconds
    });
  }

  // Initialize
  if (slides.length > 1) {
    startCarousel();
  }

  // Cleanup on page navigation
  document.addEventListener('astro:before-swap', () => {
    if (intervalId) {
      clearInterval(intervalId);
    }
  });
</script>

<style>
  /* Subtle animation for preview */
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  .relative:hover {
    animation: float 3s ease-in-out infinite;
  }

  /* Tech Stack Pills Animation */
  .tech-stack-container {
    position: relative;
    display: flex;
    justify-content: center;
    overflow: hidden;
    padding: 1rem 0;
  }

  .tech-stack-wrapper {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
    position: relative;
  }

  .tech-pill-wrapper {
    position: relative;
    display: inline-block;
    z-index: 10;
  }

  .tech-pill-wrapper:hover {
    z-index: 1000;
  }

  .tech-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    border-radius: 9999px;
    padding: 0.5rem 1rem;
    position: relative;
    z-index: 10;
    transition: all 0.3s ease;
    overflow: hidden;
    border: 2px solid transparent;
    background:
      linear-gradient(white, white) padding-box,
      linear-gradient(90deg,
        #D4A5A5 0%,
        #E8B4B4 25%,
        #F5B400 50%,
        #ff9500 75%,
        #D4A5A5 100%
      ) border-box;
    background-size: 300% 100%;
    animation: gradient-shift 3s ease-in-out infinite;
    box-shadow: 0 2px 8px rgba(212, 165, 165, 0.15);
    cursor: pointer;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  .tech-pill .icon {
    color: #003366;
    transition: all 0.3s ease;
  }

  .tech-pill:hover {
    transform: scale(1.1);
    border-color: #003366;
    box-shadow: 0 8px 20px rgba(0, 51, 102, 0.25);
  }

  .tech-pill:hover .icon {
    color: #F5B400;
    transform: rotate(360deg);
  }

  /* Benefit Icons - Ensure white color */
  .benefit-icon {
    color: white !important;
  }

  /* Responsive: stack on mobile */
  @media (max-width: 640px) {
    .tech-stack-wrapper {
      gap: 0.5rem;
    }

    .tech-pill {
      font-size: 0.875rem;
      padding: 0.375rem 0.875rem;
    }
  }
</style>
