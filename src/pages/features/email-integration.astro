---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);

const emailProviders = [
  {
    name: t('feature_pages.email_integration.page_content.providers.gmail.name', locale),
    description: t('feature_pages.email_integration.page_content.providers.gmail.description', locale),
    features: [
      t('feature_pages.email_integration.page_content.providers.gmail.feature_1', locale),
      t('feature_pages.email_integration.page_content.providers.gmail.feature_2', locale),
      t('feature_pages.email_integration.page_content.providers.gmail.feature_3', locale),
      t('feature_pages.email_integration.page_content.providers.gmail.feature_4', locale)
    ],
  },
  {
    name: t('feature_pages.email_integration.page_content.providers.outlook.name', locale),
    description: t('feature_pages.email_integration.page_content.providers.outlook.description', locale),
    features: [
      t('feature_pages.email_integration.page_content.providers.outlook.feature_1', locale),
      t('feature_pages.email_integration.page_content.providers.outlook.feature_2', locale),
      t('feature_pages.email_integration.page_content.providers.outlook.feature_3', locale),
      t('feature_pages.email_integration.page_content.providers.outlook.feature_4', locale)
    ],
  },
];

const integrationFeatures = [
  {
    title: t('feature_pages.email_integration.page_content.integration_features.feature_1_title', locale),
    description: t('feature_pages.email_integration.page_content.integration_features.feature_1_description', locale),
  },
  {
    title: t('feature_pages.email_integration.page_content.integration_features.feature_2_title', locale),
    description: t('feature_pages.email_integration.page_content.integration_features.feature_2_description', locale),
  },
  {
    title: t('feature_pages.email_integration.page_content.integration_features.feature_3_title', locale),
    description: t('feature_pages.email_integration.page_content.integration_features.feature_3_description', locale),
  },
  {
    title: t('feature_pages.email_integration.page_content.integration_features.feature_4_title', locale),
    description: t('feature_pages.email_integration.page_content.integration_features.feature_4_description', locale),
  },
];

const benefits = [
  {
    metric: t('feature_pages.email_integration.page_content.benefits_metrics.metric_1_value', locale),
    description: t('feature_pages.email_integration.page_content.benefits_metrics.metric_1_description', locale),
  },
  {
    metric: t('feature_pages.email_integration.page_content.benefits_metrics.metric_2_value', locale),
    description: t('feature_pages.email_integration.page_content.benefits_metrics.metric_2_description', locale),
  },
  {
    metric: t('feature_pages.email_integration.page_content.benefits_metrics.metric_3_value', locale),
    description: t('feature_pages.email_integration.page_content.benefits_metrics.metric_3_description', locale),
  },
];

const workflow = [
  {
    step: '1',
    title: t('feature_pages.email_integration.page_content.workflow_setup.step_1_title', locale),
    description: t('feature_pages.email_integration.page_content.workflow_setup.step_1_description', locale),
  },
  {
    step: '2',
    title: t('feature_pages.email_integration.page_content.workflow_setup.step_2_title', locale),
    description: t('feature_pages.email_integration.page_content.workflow_setup.step_2_description', locale),
  },
  {
    step: '3',
    title: t('feature_pages.email_integration.page_content.workflow_setup.step_3_title', locale),
    description: t('feature_pages.email_integration.page_content.workflow_setup.step_3_description', locale),
  },
  {
    step: '4',
    title: t('feature_pages.email_integration.page_content.workflow_setup.step_4_title', locale),
    description: t('feature_pages.email_integration.page_content.workflow_setup.step_4_description', locale),
  },
  {
    step: '5',
    title: t('feature_pages.email_integration.page_content.workflow_setup.step_5_title', locale),
    description: t('feature_pages.email_integration.page_content.workflow_setup.step_5_description', locale),
  },
  {
    step: '6',
    title: t('feature_pages.email_integration.page_content.workflow_setup.step_6_title', locale),
    description: t('feature_pages.email_integration.page_content.workflow_setup.step_6_description', locale),
  },
];

const templates = [
  {
    name: t('feature_pages.email_integration.page_content.templates_list.template_1_name', locale),
    description: t('feature_pages.email_integration.page_content.templates_list.template_1_description', locale),
    usage: t('feature_pages.email_integration.page_content.templates_list.template_1_usage', locale),
  },
  {
    name: t('feature_pages.email_integration.page_content.templates_list.template_2_name', locale),
    description: t('feature_pages.email_integration.page_content.templates_list.template_2_description', locale),
    usage: t('feature_pages.email_integration.page_content.templates_list.template_2_usage', locale),
  },
  {
    name: t('feature_pages.email_integration.page_content.templates_list.template_3_name', locale),
    description: t('feature_pages.email_integration.page_content.templates_list.template_3_description', locale),
    usage: t('feature_pages.email_integration.page_content.templates_list.template_3_usage', locale),
  },
  {
    name: t('feature_pages.email_integration.page_content.templates_list.template_4_name', locale),
    description: t('feature_pages.email_integration.page_content.templates_list.template_4_description', locale),
    usage: t('feature_pages.email_integration.page_content.templates_list.template_4_usage', locale),
  },
];

const security = [
  {
    feature: t('feature_pages.email_integration.page_content.security_features.feature_1_title', locale),
    description: t('feature_pages.email_integration.page_content.security_features.feature_1_description', locale),
  },
  {
    feature: t('feature_pages.email_integration.page_content.security_features.feature_2_title', locale),
    description: t('feature_pages.email_integration.page_content.security_features.feature_2_description', locale),
  },
  {
    feature: t('feature_pages.email_integration.page_content.security_features.feature_3_title', locale),
    description: t('feature_pages.email_integration.page_content.security_features.feature_3_description', locale),
  },
  {
    feature: t('feature_pages.email_integration.page_content.security_features.feature_4_title', locale),
    description: t('feature_pages.email_integration.page_content.security_features.feature_4_description', locale),
  },
];
---

<Layout 
  title={t('feature_pages.email_integration.meta_title', locale)}
  description={t('feature_pages.email_integration.meta_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-6">
            {t('feature_pages.email_integration.hero.badge', locale)}
          </Badge>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
            {t('feature_pages.email_integration.hero.title', locale)}
          </h1>
          
          <p class="text-lg sm:text-xl text-neutral-700 mb-8">
            {t('feature_pages.email_integration.hero.description', locale)}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <Button variant="primary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
              {t('feature_pages.email_integration.cta.primary', locale)}
            </Button>
            <Button variant="outline" size="lg" href={getLocalizedPath('/demo', locale)}>
              {t('feature_pages.email_integration.cta.secondary', locale)}
            </Button>
          </div>

          <div class="grid grid-cols-3 gap-4">
            {benefits.map((benefit) => (
              <div class="text-center">
                <div class="text-2xl font-bold text-primary mb-1">{benefit.metric}</div>
                <div class="text-sm text-neutral-600">{benefit.description}</div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="relative">
          <div class="bg-white rounded-2xl shadow-xl p-6">
            <div class="flex items-center justify-between mb-6">
              <h3 class="font-semibold text-neutral-900">{t('feature_pages.email_integration.page_content.demo_card.title', locale)}</h3>
              <Badge variant="success" size="sm">{t('feature_pages.email_integration.page_content.demo_card.status_badge', locale)}</Badge>
            </div>

            <div class="space-y-4">
              <div class="flex items-center gap-4 p-4 bg-success/5 border border-success/20 rounded-lg">
                <div class="flex-1">
                  <div class="font-semibold text-neutral-900">{t('feature_pages.email_integration.page_content.demo_card.gmail_provider', locale)}</div>
                  <div class="text-sm text-neutral-600">{t('feature_pages.email_integration.page_content.demo_card.gmail_email', locale)}</div>
                  <div class="text-xs text-success">{t('feature_pages.email_integration.page_content.demo_card.gmail_status', locale)}</div>
                </div>
                <span class="icon text-success font-bold">check</span>
              </div>

              <div class="p-4 border-2 border-dashed border-neutral-200 rounded-lg text-center">
                <div class="text-sm text-neutral-600">{t('feature_pages.email_integration.page_content.demo_card.outlook_label', locale)}</div>
                <Button variant="outline" size="sm" class="mt-2">
                  {t('feature_pages.email_integration.page_content.demo_card.outlook_button', locale)}
                </Button>
              </div>
            </div>

            <div class="mt-6 p-4 bg-neutral-50 rounded-lg">
              <div class="text-sm font-medium text-neutral-900 mb-2">{t('feature_pages.email_integration.page_content.demo_card.recent_sync_title', locale)}</div>
              <div class="space-y-2">
                <div class="flex justify-between text-xs">
                  <span>{t('feature_pages.email_integration.page_content.demo_card.emails_received', locale)}</span>
                  <span class="text-primary font-medium">{t('feature_pages.email_integration.page_content.demo_card.emails_received_value', locale)}</span>
                </div>
                <div class="flex justify-between text-xs">
                  <span>{t('feature_pages.email_integration.page_content.demo_card.auto_linked', locale)}</span>
                  <span class="text-success font-medium">{t('feature_pages.email_integration.page_content.demo_card.auto_linked_value', locale)}</span>
                </div>
                <div class="flex justify-between text-xs">
                  <span>{t('feature_pages.email_integration.page_content.demo_card.last_sync', locale)}</span>
                  <span class="text-neutral-600">{t('feature_pages.email_integration.page_content.demo_card.last_sync_value', locale)}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Email Providers -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.email_integration.page_content.providers.section_title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.email_integration.page_content.providers.section_description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {emailProviders.map((provider) => (
          <Card variant="default" padding="lg" class="h-full">
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">
              {provider.name}
            </h3>
            <p class="text-neutral-700 mb-6">
              {provider.description}
            </p>
            
            <ul class="space-y-2">
              {provider.features.map((feature) => (
                <li class="text-sm text-neutral-600 flex items-center gap-2">
                  <span class="icon icon-sm text-success">check</span>
                  {feature}
                </li>
              ))}
            </ul>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Integration Features -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.email_integration.page_content.integration_features.section_title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.email_integration.page_content.integration_features.section_description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {integrationFeatures.map((feature) => (
          <Card variant="default" padding="lg" class="h-full">
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-neutral-700">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Workflow Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.email_integration.page_content.workflow_setup.section_title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.email_integration.page_content.workflow_setup.section_description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {workflow.map((step, index) => (
          <div class="relative">
            <Card variant="default" padding="lg" class="h-full">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-bold">
                  {step.step}
                </div>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-3">
                {step.title}
              </h3>
              <p class="text-neutral-700">
                {step.description}
              </p>
            </Card>
            
            {index < workflow.length - 1 && index % 3 !== 2 && (
              <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-primary/30 transform -translate-y-1/2"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Email Templates -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.email_integration.page_content.templates_list.section_title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.email_integration.page_content.templates_list.section_description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {templates.map((template) => (
          <Card variant="default" padding="lg" class="h-full">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">
              {template.name}
            </h3>
            <p class="text-neutral-700 mb-4">
              {template.description}
            </p>
            <Badge variant="secondary" size="sm">
              {template.usage}
            </Badge>
          </Card>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <p class="text-neutral-700 mb-4">{t('feature_pages.email_integration.page_content.templates_list.cta_note', locale)}</p>
        <Button variant="outline" href={getLocalizedPath('/demo', locale)}>
          {t('feature_pages.email_integration.page_content.templates_list.cta_button', locale)}
        </Button>
      </div>
    </div>
  </section>

  <!-- Security Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            {t('feature_pages.email_integration.page_content.security_features.section_title', locale)}
          </h2>

          <p class="text-lg text-neutral-700 mb-8">
            {t('feature_pages.email_integration.page_content.security_features.section_description', locale)}
          </p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {security.map((item) => (
              <div class="flex items-start gap-3">
                <div>
                  <h3 class="font-semibold text-neutral-900 mb-1">{item.feature}</h3>
                  <p class="text-sm text-neutral-700">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">{t('feature_pages.email_integration.page_content.statistics.section_title', locale)}</h3>

          <div class="space-y-6">
            <div class="border-l-4 border-primary pl-4">
              <div class="text-2xl font-bold text-primary">{t('feature_pages.email_integration.page_content.statistics.stat_1_value', locale)}</div>
              <div class="text-neutral-700">{t('feature_pages.email_integration.page_content.statistics.stat_1_description', locale)}</div>
            </div>

            <div class="border-l-4 border-secondary pl-4">
              <div class="text-2xl font-bold text-secondary">{t('feature_pages.email_integration.page_content.statistics.stat_2_value', locale)}</div>
              <div class="text-neutral-700">{t('feature_pages.email_integration.page_content.statistics.stat_2_description', locale)}</div>
            </div>

            <div class="border-l-4 border-success pl-4">
              <div class="text-2xl font-bold text-success">{t('feature_pages.email_integration.page_content.statistics.stat_3_value', locale)}</div>
              <div class="text-neutral-700">{t('feature_pages.email_integration.page_content.statistics.stat_3_description', locale)}</div>
            </div>
          </div>

          <div class="mt-8 p-4 bg-white rounded-lg">
            <div class="text-center">
              <div class="text-lg font-semibold text-neutral-900 mb-2">
                {t('feature_pages.email_integration.page_content.statistics.testimonial_quote', locale)}
              </div>
              <div class="text-sm text-neutral-600">{t('feature_pages.email_integration.page_content.statistics.testimonial_author', locale)}</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Integration Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.email_integration.page_content.integration_cards.section_title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.email_integration.page_content.integration_cards.section_description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">{t('feature_pages.email_integration.page_content.integration_cards.card_1_title', locale)}</h3>
          <p class="text-neutral-700">
            {t('feature_pages.email_integration.page_content.integration_cards.card_1_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">{t('feature_pages.email_integration.page_content.integration_cards.card_2_title', locale)}</h3>
          <p class="text-neutral-700">
            {t('feature_pages.email_integration.page_content.integration_cards.card_2_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">{t('feature_pages.email_integration.page_content.integration_cards.card_3_title', locale)}</h3>
          <p class="text-neutral-700">
            {t('feature_pages.email_integration.page_content.integration_cards.card_3_description', locale)}
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('feature_pages.email_integration.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('feature_pages.email_integration.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
          {t('feature_pages.email_integration.cta.primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href={getLocalizedPath('/features', locale)} class="border-2 border-white hover:bg-white hover:text-primary">
          {t('feature_pages.email_integration.cta.secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>