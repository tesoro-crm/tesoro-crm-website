---
import Card from '../ui/Card.astro';
import SectionHeader from '../ui/SectionHeader.astro';
import { t } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

export interface Props {
  locale: Language;
}

const { locale } = Astro.props;
---

<section class="py-16 lg:py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <SectionHeader
      title={t('home.features.title', locale)}
      description={t('home.features.description', locale)}
      size="md"
      alignment="center"
    />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <Card variant="default" padding="lg" class="text-center">
        <div class="text-4xl mb-4"><span class="icon" style="font-size: 4rem;">ads_click</span></div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">
          {t('home.features.feature_1_title', locale)}
        </h3>
        <p class="text-neutral-600">
          {t('home.features.feature_1_description', locale)}
        </p>
      </Card>

      <Card variant="default" padding="lg" class="text-center">
        <div class="text-4xl mb-4"><span class="icon" style="font-size: 4rem;">sync</span></div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">
          {t('home.features.feature_2_title', locale)}
        </h3>
        <p class="text-neutral-600">
          {t('home.features.feature_2_description', locale)}
        </p>
      </Card>

      <Card variant="default" padding="lg" class="text-center">
        <div class="text-4xl mb-4"><span class="icon" style="font-size: 4rem;">check</span></div>
        <h3 class="text-xl font-semibold text-neutral-900 mb-3">
          {t('home.features.feature_3_title', locale)}
        </h3>
        <p class="text-neutral-600">
          {t('home.features.feature_3_description', locale)}
        </p>
      </Card>
    </div>
  </div>
</section>
