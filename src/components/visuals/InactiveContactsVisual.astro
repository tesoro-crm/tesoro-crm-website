---
// Visual for inactive contacts dashboard view
---

<div class="inactive-contacts">
  <div class="dashboard-header">
    <div class="dashboard-title">
      <span class="icon">people</span>
      <span>Contacten</span>
    </div>
    <div class="filter-badge">
      <span class="icon">filter_list</span>
      <span>Niet gecontacteerd in 10+ dagen</span>
    </div>
  </div>

  <div class="contacts-list">
    <div class="contact-card urgent">
      <div class="contact-avatar">JJ</div>
      <div class="contact-info">
        <div class="contact-name">Jan Jansen</div>
        <div class="contact-meta">
          <span class="icon warning">warning</span>
          <span>15 dagen geen contact</span>
        </div>
      </div>
      <div class="contact-action">
        <button class="quick-call">
          <span class="icon">call</span>
        </button>
      </div>
    </div>

    <div class="contact-card warning">
      <div class="contact-avatar">MS</div>
      <div class="contact-info">
        <div class="contact-name">Maria Smit</div>
        <div class="contact-meta">
          <span class="icon warning">schedule</span>
          <span>12 dagen geen contact</span>
        </div>
      </div>
      <div class="contact-action">
        <button class="quick-call">
          <span class="icon">call</span>
        </button>
      </div>
    </div>

    <div class="contact-card attention">
      <div class="contact-avatar">PD</div>
      <div class="contact-info">
        <div class="contact-name">Pieter de Vries</div>
        <div class="contact-meta">
          <span class="icon">access_time</span>
          <span>10 dagen geen contact</span>
        </div>
      </div>
      <div class="contact-action">
        <button class="quick-call">
          <span class="icon">call</span>
        </button>
      </div>
    </div>
  </div>

  <div class="alert-banner">
    <span class="icon">notifications_active</span>
    <span>3 contacten hebben dringend aandacht nodig</span>
  </div>
</div>

<style>
  .inactive-contacts {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 20px 40px rgba(10, 31, 68, 0.12);
    border: 1px solid rgba(10, 31, 68, 0.08);
    max-width: 500px;
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f0f0f0;
  }

  .dashboard-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: #0a1f44;
    font-size: 1.125rem;
  }

  .dashboard-title .icon {
    font-size: 1.5rem;
    color: #003366;
  }

  .filter-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #92400e;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
  }

  .filter-badge .icon {
    font-size: 1rem;
  }

  .contacts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .contact-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: #fafafa;
    border-radius: 0.75rem;
    border-left: 4px solid transparent;
    transition: all 0.3s ease;
    animation: slideIn 0.5s ease-out backwards;
  }

  .contact-card:nth-child(1) { animation-delay: 0.1s; }
  .contact-card:nth-child(2) { animation-delay: 0.2s; }
  .contact-card:nth-child(3) { animation-delay: 0.3s; }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .contact-card.urgent {
    border-left-color: #dc2626;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  }

  .contact-card.warning {
    border-left-color: #f59e0b;
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  }

  .contact-card.attention {
    border-left-color: #fbbf24;
    background: linear-gradient(135deg, #fefce8 0%, #fef9c3 100%);
  }

  .contact-card:hover {
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(10, 31, 68, 0.1);
  }

  .contact-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #003366, #0066cc);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1rem;
    flex-shrink: 0;
  }

  .contact-info {
    flex: 1;
    min-width: 0;
  }

  .contact-name {
    font-weight: 600;
    color: #0a1f44;
    margin-bottom: 0.25rem;
  }

  .contact-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #6b7280;
  }

  .contact-meta .icon {
    font-size: 1rem;
  }

  .contact-meta .icon.warning {
    color: #f59e0b;
  }

  .contact-action {
    flex-shrink: 0;
  }

  .quick-call {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: none;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .quick-call:hover {
    transform: scale(1.1);
    box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
  }

  .quick-call .icon {
    font-size: 1.25rem;
  }

  .alert-banner {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    border-radius: 0.75rem;
    border: 1px solid #fecaca;
    color: #991b1b;
    font-weight: 500;
    font-size: 0.875rem;
    animation: fadeIn 0.8s ease-out 0.4s backwards;
  }

  .alert-banner .icon {
    font-size: 1.25rem;
    color: #dc2626;
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .inactive-contacts {
      padding: 1rem;
    }

    .dashboard-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .filter-badge {
      font-size: 0.75rem;
      padding: 0.375rem 0.75rem;
    }

    .contact-card {
      padding: 0.75rem;
    }

    .contact-avatar {
      width: 40px;
      height: 40px;
      font-size: 0.875rem;
    }

    .contact-name {
      font-size: 0.875rem;
    }

    .contact-meta {
      font-size: 0.75rem;
    }

    .quick-call {
      width: 36px;
      height: 36px;
    }

    .alert-banner {
      font-size: 0.75rem;
      padding: 0.75rem;
    }
  }
</style>
