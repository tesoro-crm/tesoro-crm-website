---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Input from '../components/ui/Input.astro';
import Badge from '../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale, Astro.url);
await loadTranslations(locale);

const demoFeatures = [
  t('home.demo_page.benefit_1', locale),
  t('home.demo_page.benefit_2', locale),
  t('home.demo_page.benefit_3', locale),
  t('home.demo_page.benefit_4', locale),
  t('home.demo_page.benefit_5', locale)
];

const timeSlots = [
  '09:00 - 10:00',
  '10:00 - 11:00',
  '11:00 - 12:00',
  '13:00 - 14:00',
  '14:00 - 15:00',
  '15:00 - 16:00',
  '16:00 - 17:00'
];
---

<Layout
  title={t('home.demo_page.meta_title', locale)}
  description={t('home.demo_page.meta_description', locale)}
>
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-16">
        <Badge variant="primary" size="md" class="mb-4">
          {t('home.demo_page.badge', locale)}
        </Badge>
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-neutral-900 mb-6">
          {t('home.demo_page.title', locale)}
        </h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.demo_page.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Demo Booking Form -->
        <Card variant="default" padding="lg">
          <h2 class="text-2xl font-display font-bold text-neutral-900 mb-6">
            {t('home.demo_page.form_title', locale)}
          </h2>

          <form action="/api/demo" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <Input
                name="firstName"
                label={t('home.demo_page.label_first_name', locale)}
                placeholder={t('home.demo_page.placeholder_first_name', locale)}
                required
              />
              <Input
                name="lastName"
                label={t('home.demo_page.label_last_name', locale)}
                placeholder={t('home.demo_page.placeholder_last_name', locale)}
                required
              />
            </div>

            <Input
              type="email"
              name="email"
              label={t('home.demo_page.label_email', locale)}
              placeholder={t('home.demo_page.placeholder_email', locale)}
              required
            />

            <Input
              type="tel"
              name="phone"
              label={t('home.demo_page.label_phone', locale)}
              placeholder={t('home.demo_page.placeholder_phone', locale)}
              required
            />

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                {t('home.demo_page.label_company', locale)}
              </label>
              <Input
                name="company"
                placeholder={t('home.demo_page.placeholder_company', locale)}
                required
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                {t('home.demo_page.label_preferred_date', locale)}
              </label>
              <Input
                type="date"
                name="preferredDate"
                required
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                {t('home.demo_page.label_preferred_time', locale)}
              </label>
              <select
                name="preferredTime"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary transition-all duration-200"
                required
              >
                <option value="">{t('home.demo_page.placeholder_time_select', locale)}</option>
                {timeSlots.map((slot) => (
                  <option value={slot}>{slot}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="notes" class="block text-sm font-medium text-neutral-700 mb-2">
                {t('home.demo_page.label_notes', locale)}
              </label>
              <textarea
                name="notes"
                id="notes"
                rows="3"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary transition-all duration-200 resize-none"
                placeholder={t('home.demo_page.placeholder_notes', locale)}
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                name="privacy"
                id="privacy"
                class="mt-1"
                required
              />
              <label for="privacy" class="text-sm text-neutral-600">
                {t('home.demo_page.privacy_text', locale)} <a href={getLocalizedPath('/privacy', locale)} class="text-primary hover:underline">{t('home.demo_page.privacy_link_text', locale)}</a> {t('home.demo_page.privacy_text_end', locale)}
              </label>
            </div>

            <Button variant="primary" size="lg" type="submit" fullWidth>
              {t('home.demo_page.submit_button', locale)}
            </Button>
          </form>
        </Card>

        <!-- Demo Benefits -->
        <div class="space-y-6">
          <Card variant="default" padding="lg">
            <h3 class="text-2xl font-display font-bold text-neutral-900 mb-6">
              {t('home.demo_page.benefits_title', locale)}
            </h3>

            <div class="space-y-4">
              {demoFeatures.map((feature) => (
                <div class="flex items-start gap-3">
                  <span class="icon icon-sm text-success mt-0.5">check_circle</span>
                  <div class="text-neutral-700">{feature}</div>
                </div>
              ))}
            </div>
          </Card>

          <Card variant="elevated" padding="lg">
            <h4 class="font-semibold text-neutral-900 mb-2 flex items-center gap-2">
              <span class="icon icon-sm text-primary">calendar_month</span>
              {t('home.demo_page.schedule_card_title', locale)}
            </h4>
            <p class="text-sm text-neutral-600 mb-4">
              {t('home.demo_page.schedule_card_text', locale)}
            </p>

            <div class="grid grid-cols-2 gap-2 text-xs">
              {timeSlots.slice(0, 6).map((slot) => (
                <div class="text-neutral-600">{slot}</div>
              ))}
            </div>
          </Card>

          <Card variant="outline" padding="lg">
            <h4 class="font-semibold text-neutral-900 mb-2 flex items-center gap-2">
              <span class="icon icon-sm text-primary">phone</span>
              {t('home.demo_page.phone_card_title', locale)}
            </h4>
            <p class="text-sm text-neutral-600 mb-4">
              {t('home.demo_page.phone_card_text', locale)}
            </p>
            <Button variant="outline" size="sm" href="tel:+31201234567">
              {t('home.demo_page.phone_button', locale)}
            </Button>
          </Card>
        </div>
      </div>
    </div>
  </section>
</Layout>
