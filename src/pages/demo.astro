---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Input from '../components/ui/Input.astro';
import Badge from '../components/ui/Badge.astro';
import { getLocale, loadTranslations, t } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale, Astro.url);
await loadTranslations(locale);

const demoFeatures = [
  'Persoonlijke productdemonstratie (30 minuten)',
  'Live Q&A met productexpert',
  'Overzicht van integratie mogelijkheden',
  'Antwoorden op al je vragen',
  'Geen verplichtingen'
];

const timeSlots = [
  '09:00 - 10:00',
  '10:00 - 11:00',
  '11:00 - 12:00',
  '13:00 - 14:00',
  '14:00 - 15:00',
  '15:00 - 16:00',
  '16:00 - 17:00'
];
---

<Layout
  title="Demo Boeken - Tesoro CRM"
  description="Boek een gratis persoonlijke demo van Tesoro CRM. Ontdek hoe ons AI-powered platform je helpt bij vastgoed leadgeneratie."
>
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-16">
        <Badge variant="primary" size="md" class="mb-4">
          ðŸŽ¥ Gratis Demo
        </Badge>
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-neutral-900 mb-6">
          Zie Tesoro CRM in actie
        </h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Boek een gratis persoonlijke demo en ontdek hoe Tesoro CRM je helpt om meer vastgoed leads te genereren en je workflow te automatiseren.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Demo Booking Form -->
        <Card variant="default" padding="lg">
          <h2 class="text-2xl font-display font-bold text-neutral-900 mb-6">
            Demo inplannen
          </h2>

          <form action="/api/demo" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <Input
                name="firstName"
                label="Voornaam"
                placeholder="Jan"
                required
              />
              <Input
                name="lastName"
                label="Achternaam"
                placeholder="Jansen"
                required
              />
            </div>

            <Input
              type="email"
              name="email"
              label="E-mailadres"
              placeholder="jan.jansen@bedrijf.nl"
              required
            />

            <Input
              type="tel"
              name="phone"
              label="Telefoonnummer"
              placeholder="+31 6 1234 5678"
              required
            />

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                Bedrijfsnaam
              </label>
              <Input
                name="company"
                placeholder="Makelaardij Jansen"
                required
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                Voorkeursdatum
              </label>
              <Input
                type="date"
                name="preferredDate"
                required
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                Voorkeurstijd
              </label>
              <select
                name="preferredTime"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary transition-all duration-200"
                required
              >
                <option value="">Selecteer een tijd</option>
                {timeSlots.map((slot) => (
                  <option value={slot}>{slot}</option>
                ))}
              </select>
            </div>

            <div>
              <label for="notes" class="block text-sm font-medium text-neutral-700 mb-2">
                Opmerkingen (optioneel)
              </label>
              <textarea
                name="notes"
                id="notes"
                rows="3"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary transition-all duration-200 resize-none"
                placeholder="Specifieke vragen of onderwerpen die je wilt bespreken..."
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                name="privacy"
                id="privacy"
                class="mt-1"
                required
              />
              <label for="privacy" class="text-sm text-neutral-600">
                Ik ga akkoord met het <a href="/privacy" class="text-primary hover:underline">privacybeleid</a> en geef toestemming voor contact.
              </label>
            </div>

            <Button variant="primary" size="lg" type="submit" fullWidth>
              Demo Boeken
            </Button>
          </form>
        </Card>

        <!-- Demo Benefits -->
        <div class="space-y-6">
          <Card variant="default" padding="lg">
            <h3 class="text-2xl font-display font-bold text-neutral-900 mb-6">
              Wat kun je verwachten?
            </h3>

            <div class="space-y-4">
              {demoFeatures.map((feature) => (
                <div class="flex items-start gap-3">
                  <div class="text-success text-lg mt-0.5">âœ“</div>
                  <div class="text-neutral-700">{feature}</div>
                </div>
              ))}
            </div>
          </Card>

          <Card variant="elevated" padding="lg">
            <h4 class="font-semibold text-neutral-900 mb-2">
              ðŸ“… Wanneer past het jou?
            </h4>
            <p class="text-sm text-neutral-600 mb-4">
              We plannen demo's in op werkdagen tussen 9:00 en 17:00. Niet de juiste tijd beschikbaar? Neem contact op voor alternatieven.
            </p>

            <div class="grid grid-cols-2 gap-2 text-xs">
              {timeSlots.slice(0, 6).map((slot) => (
                <div class="text-neutral-600">{slot}</div>
              ))}
            </div>
          </Card>

          <Card variant="outline" padding="lg">
            <h4 class="font-semibold text-neutral-900 mb-2">
              ðŸ“ž Liever direct bellen?
            </h4>
            <p class="text-sm text-neutral-600 mb-4">
              Voor urgente vragen kun je ons altijd bellen op +31 20 123 4567.
            </p>
            <Button variant="outline" size="sm" href="tel:+31201234567">
              Nu Bellen
            </Button>
          </Card>
        </div>
      </div>
    </div>
  </section>
</Layout>
