---
import type { Language } from '../../types/language';
import { t, getLocalizedPath } from '../../i18n/utils';
import Button from '../ui/Button.astro';
import SectionHeader from '../ui/SectionHeader.astro';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;

// Note: alternatives pages are Spanish market focused, so always use /es/ path
const alternativesPath = '/es/alternatives';
const blogPath = getLocalizedPath('/blog/upgrade-from-sooprema', locale);
---

<section class="competitor-comparison">
  <div class="container">
    <SectionHeader
      badge={t('home.competitor_comparison.badge', locale)}
      badgeVariant="gradient"
      title={t('home.competitor_comparison.title', locale)}
      description={t('home.competitor_comparison.subtitle', locale)}
      size="md"
      maxWidth="lg"
    />

    <div class="features-grid">
      <div class="feature-card">
        <span class="material-symbols-outlined icon">
          {t('home.competitor_comparison.feature_1_icon', locale)}
        </span>
        <h3>{t('home.competitor_comparison.feature_1_title', locale)}</h3>
        <p>{t('home.competitor_comparison.feature_1_description', locale)}</p>
      </div>

      <div class="feature-card">
        <span class="material-symbols-outlined icon">
          {t('home.competitor_comparison.feature_2_icon', locale)}
        </span>
        <h3>{t('home.competitor_comparison.feature_2_title', locale)}</h3>
        <p>{t('home.competitor_comparison.feature_2_description', locale)}</p>
      </div>

      <div class="feature-card">
        <span class="material-symbols-outlined icon">
          {t('home.competitor_comparison.feature_3_icon', locale)}
        </span>
        <h3>{t('home.competitor_comparison.feature_3_title', locale)}</h3>
        <p>{t('home.competitor_comparison.feature_3_description', locale)}</p>
      </div>
    </div>

    <div class="cta-buttons">
      <Button href={alternativesPath} variant="primary" size="lg">
        {t('home.competitor_comparison.cta_primary', locale)}
      </Button>
      <Button href={blogPath} variant="secondary" size="lg">
        {t('home.competitor_comparison.cta_secondary', locale)}
      </Button>
    </div>
  </div>
</section>

<style>
  .competitor-comparison {
    padding: 6rem 1.5rem;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    position: relative;
    overflow: hidden;
  }

  .competitor-comparison::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #003366, #F5B400);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .feature-card {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    text-align: left;
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: #F5B400;
  }

  .icon {
    font-size: 3rem;
    color: #F5B400;
    display: block;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #003366;
    margin-bottom: 0.75rem;
  }

  .feature-card p {
    font-size: 1rem;
    color: #64748b;
    line-height: 1.6;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .competitor-comparison {
      padding: 4rem 1rem;
    }

    .title {
      font-size: 1.875rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .feature-card {
      padding: 2rem 1.5rem;
    }

    .cta-buttons {
      flex-direction: column;
    }
  }
</style>
