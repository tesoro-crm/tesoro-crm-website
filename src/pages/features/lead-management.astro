---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);
---

<Layout
  title={t('feature_pages.lead_management.meta_title', locale)}
  description={t('feature_pages.lead_management.meta_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-6">
            {t('feature_pages.lead_management.hero.badge', locale)}
          </Badge>

          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
            {t('feature_pages.lead_management.hero.title', locale)}
          </h1>

          <p class="text-lg sm:text-xl text-neutral-700 mb-8">
            {t('feature_pages.lead_management.hero.description', locale)}
          </p>

          <div class="grid grid-cols-3 gap-6 mb-8">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">
                {t('feature_pages.lead_management.stats.response_time', locale)}
              </div>
              <div class="text-sm text-neutral-600">
                {t('feature_pages.lead_management.stats.response_time_desc', locale)}
              </div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">
                {t('feature_pages.lead_management.stats.no_lead_lost', locale)}
              </div>
              <div class="text-sm text-neutral-600">
                {t('feature_pages.lead_management.stats.no_lead_lost_desc', locale)}
              </div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-1">
                {t('feature_pages.lead_management.stats.channels', locale)}
              </div>
              <div class="text-sm text-neutral-600">
                {t('feature_pages.lead_management.stats.channels_desc', locale)}
              </div>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <Button variant="primary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
              {t('feature_pages.lead_management.hero.cta_primary', locale)}
            </Button>
            <Button variant="outline" size="lg" href={getLocalizedPath('/demo', locale)}>
              {t('feature_pages.lead_management.hero.cta_secondary', locale)}
            </Button>
          </div>
        </div>

        <div class="bg-white rounded-2xl shadow-xl p-6">
          <h3 class="text-xl font-semibold text-neutral-900 mb-4">
            {t('feature_pages.lead_management.hero.sources_title', locale)}
          </h3>
          <div class="space-y-3">
            <div class="flex items-center gap-3 p-3 bg-primary/5 rounded-lg">
              <span class="icon text-primary">language</span>
              <div>
                <div class="font-semibold text-neutral-900">
                  {t('feature_pages.lead_management.hero.source_website', locale)}
                </div>
                <div class="text-sm text-neutral-600">
                  {t('feature_pages.lead_management.hero.source_website_desc', locale)}
                </div>
              </div>
            </div>
            <div class="flex items-center gap-3 p-3 bg-secondary/5 rounded-lg">
              <span class="icon text-secondary">home</span>
              <div>
                <div class="font-semibold text-neutral-900">
                  {t('feature_pages.lead_management.hero.source_portals', locale)}
                </div>
                <div class="text-sm text-neutral-600">
                  {t('feature_pages.lead_management.hero.source_portals_desc', locale)}
                </div>
              </div>
            </div>
            <div class="flex items-center gap-3 p-3 bg-success/5 rounded-lg">
              <span class="icon text-success">campaign</span>
              <div>
                <div class="font-semibold text-neutral-900">
                  {t('feature_pages.lead_management.hero.source_social', locale)}
                </div>
                <div class="text-sm text-neutral-600">
                  {t('feature_pages.lead_management.hero.source_social_desc', locale)}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-warning/10 to-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <Badge variant="warning" size="md" class="mb-4">
          {t('feature_pages.lead_management.problem.badge', locale)}
        </Badge>
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.lead_management.problem.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
          {t('feature_pages.lead_management.problem.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[1, 2, 3, 4].map((problem) => (
          <Card variant="default" padding="lg" class="border-2 border-warning/30 bg-white">
            <div class="w-10 h-10 bg-warning/10 rounded-full flex items-center justify-center mb-4">
              <span class="icon text-warning">close</span>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">
              {t(`feature_pages.lead_management.problem.issue_${problem}_title`, locale)}
            </h3>
            <p class="text-sm text-neutral-700">
              {t(`feature_pages.lead_management.problem.issue_${problem}_description`, locale)}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <Badge variant="success" size="md" class="mb-4">
          {t('feature_pages.lead_management.solution.badge', locale)}
        </Badge>
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.lead_management.solution.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
          {t('feature_pages.lead_management.solution.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {[1, 2, 3, 4].map((solution) => (
          <Card variant="default" padding="lg" class="border-2 border-success/30">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-success/10 rounded-full flex items-center justify-center flex-shrink-0">
                <span class="text-xl font-bold text-success">{solution}</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-neutral-900 mb-2">
                  {t(`feature_pages.lead_management.solution.feature_${solution}_title`, locale)}
                </h3>
                <p class="text-neutral-700">
                  {t(`feature_pages.lead_management.solution.feature_${solution}_description`, locale)}
                </p>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Workflow Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-primary/5 to-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.lead_management.workflow.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
          {t('feature_pages.lead_management.workflow.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[1, 2, 3, 4].map((step) => (
          <Card variant="default" padding="lg" class="relative">
            <div class="w-10 h-10 bg-primary/10 rounded-full flex items-center justify-center mb-4">
              <span class="text-xl font-bold text-primary">{step}</span>
            </div>
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">
              {t(`feature_pages.lead_management.workflow.step_${step}_title`, locale)}
            </h3>
            <p class="text-sm text-neutral-700 mb-3">
              {t(`feature_pages.lead_management.workflow.step_${step}_description`, locale)}
            </p>
            <div class="text-xs text-primary font-medium">
              {t(`feature_pages.lead_management.workflow.step_${step}_timing`, locale)}
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Integration Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            {t('feature_pages.lead_management.integration.title', locale)}
          </h2>
          <p class="text-lg text-neutral-700 mb-8">
            {t('feature_pages.lead_management.integration.description', locale)}
          </p>

          <div class="space-y-4">
            {[1, 2, 3].map((integration) => (
              <div class="flex items-start gap-3">
                <span class="icon text-success mt-1">check_circle</span>
                <div>
                  <h4 class="font-semibold text-neutral-900">
                    {t(`feature_pages.lead_management.integration.feature_${integration}_title`, locale)}
                  </h4>
                  <p class="text-sm text-neutral-700">
                    {t(`feature_pages.lead_management.integration.feature_${integration}_description`, locale)}
                  </p>
                </div>
              </div>
            ))}
          </div>
        </div>

        <div class="bg-gradient-to-br from-neutral-100 to-neutral-50 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">
            {t('feature_pages.lead_management.integration.channels_title', locale)}
          </h3>
          <div class="space-y-3">
            <div class="bg-white rounded-lg p-4 flex items-center gap-3">
              <span class="icon text-primary">language</span>
              <span class="font-medium">Website Forms</span>
            </div>
            <div class="bg-white rounded-lg p-4 flex items-center gap-3">
              <span class="icon text-secondary">email</span>
              <span class="font-medium">Email</span>
            </div>
            <div class="bg-white rounded-lg p-4 flex items-center gap-3">
              <span class="icon text-success">call</span>
              <span class="font-medium">Phone</span>
            </div>
            <div class="bg-white rounded-lg p-4 flex items-center gap-3">
              <span class="icon text-warning">campaign</span>
              <span class="font-medium">Social Media</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('feature_pages.lead_management.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('feature_pages.lead_management.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
          {t('feature_pages.lead_management.cta.primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href={getLocalizedPath('/pricing', locale)} class="border-2 border-white hover:bg-white hover:text-primary">
          {t('feature_pages.lead_management.cta.secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
