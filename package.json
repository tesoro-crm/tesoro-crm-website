{
  "name": "callous-conjunction",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build && node scripts/fix-routes.js",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.tsx,.astro",
    "validate:i18n": "node scripts/validate-translations.js",
    "test": "echo 'Playwright tests temporarily disabled due to Cloudflare adapter compatibility' && exit 0",
    "test:run": "playwright test",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "deploy:preview": "npm run build && wrangler pages deploy dist --branch preview",
    "deploy:production": "npm run build && wrangler pages deploy dist --branch main"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.25",
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/mdx": "^4.3.7",
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@fontsource/jetbrains-mono": "^5.2.8",
    "@playform/compress": "^0.2.0",
    "@spotlightjs/astro": "^3.2.6",
    "astro": "^5.14.5",
    "astro-icon": "^1.1.5",
    "astro-robots-txt": "^1.0.0",
    "astro-seo": "^0.8.4",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@eslint/js": "^9.37.0",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/poppins": "^5.2.7",
    "@playwright/test": "^1.56.0",
    "@tailwindcss/typography": "^0.5.19",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-plugin-astro": "^1.3.1",
    "globals": "^16.4.0",
    "playwright": "^1.56.0",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "wrangler": "^4.42.0"
  }
}
