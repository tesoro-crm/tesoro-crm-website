<script>
  // WORLD-CLASS KNOWLEDGE BASE FUNCTIONALITY
  document.addEventListener('DOMContentLoaded', () => {
    const searchInput = document.getElementById('kb-search') as HTMLInputElement;
    const suggestions = document.querySelectorAll('.suggestion');
    
    // Enhanced search functionality with multiple targets
    searchInput?.addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase().trim();
      
      // Search targets: step cards, featured cards, article previews
      const searchTargets = [
        ...document.querySelectorAll('.step-card'),
        ...document.querySelectorAll('.featured-card'),
        ...document.querySelectorAll('.article-preview'),
        ...document.querySelectorAll('.path-card')
      ];

      searchTargets.forEach(target => {
        const title = target.querySelector('.step-title, .featured-title, .preview-title, .path-name')?.textContent?.toLowerCase() || '';
        const description = target.querySelector('.step-description, .featured-description, .path-desc')?.textContent?.toLowerCase() || '';
        const category = target.querySelector('.featured-category, .path-name')?.textContent?.toLowerCase() || '';
        
        const isMatch = query === '' || 
          title.includes(query) || 
          description.includes(query) || 
          category.includes(query);
        
        (target as HTMLElement).style.display = isMatch ? '' : 'none';
        
        // Hide empty sections
        const section = target.closest('.onboarding, .featured, .learning-paths');
        if (section) {
          const visibleCards = section.querySelectorAll('[style=""], [style*="display: "]').length;
          (section as HTMLElement).style.display = visibleCards > 0 ? '' : 'none';
        }
      });

      // Show all sections if search is cleared
      if (query === '') {
        document.querySelectorAll('.onboarding, .featured, .learning-paths').forEach(section => {
          (section as HTMLElement).style.display = '';
        });
      }
    });

    // Quick search suggestions functionality
    suggestions.forEach(suggestion => {
      suggestion.addEventListener('click', () => {
        const query = suggestion.textContent?.trim() || '';
        if (searchInput) {
          searchInput.value = query;
          searchInput.dispatchEvent(new Event('input'));
          searchInput.focus();
        }
      });
    });

    // Progress tracking for Foundation Level (future enhancement)
    const stepCards = document.querySelectorAll('.step-card');
    stepCards.forEach((card, index) => {
      const link = card.querySelector('.step-link') as HTMLAnchorElement;
      link?.addEventListener('click', () => {
        // Store progress in localStorage for future use
        localStorage.setItem('tesoro-kb-progress', JSON.stringify({
          currentStep: index + 1,
          timestamp: Date.now()
        }));
      });
    });

    // Show progress indicator if user has made progress
    const progress = JSON.parse(localStorage.getItem('tesoro-kb-progress') || '{}');
    if (progress.currentStep) {
      stepCards.forEach((card, index) => {
        if (index < progress.currentStep - 1) {
          card.classList.add('step-completed');
        }
      });
    }

    // Intersection Observer for step cards animation
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    // Initialize animation state and observe elements
    document.querySelectorAll('.step-card, .featured-card, .path-card').forEach(element => {
      (element as HTMLElement).style.opacity = '0';
      (element as HTMLElement).style.transform = 'translateY(20px)';
      (element as HTMLElement).style.transition = 'opacity 0.5s ease, transform 0.5s ease';
      observer.observe(element);
    });

    // Analytics tracking (foundation for future implementation)
    document.querySelectorAll('a[href*="/knowledge-base/"]').forEach(link => {
      link.addEventListener('click', (e) => {
        const href = (e.currentTarget as HTMLAnchorElement).href;
        const articleId = href.split('/').pop();
        console.log(`Knowledge Base Article Clicked: ${articleId}`);
        // Future: Send to analytics service
      });
    });
  });

  // CSS for completed steps
  const style = document.createElement('style');
  style.textContent = `
    .step-completed .step-number {
      background: linear-gradient(135deg, #059669 0%, #10b981 100%);
    }
    .step-completed .step-number::after {
      content: '✓';
      position: absolute;
      font-size: 1rem;
      font-weight: 900;
    }
    .step-completed .step-content {
      border-color: #10b981;
      background: linear-gradient(135deg, #f0fdf4 0%, #ffffff 100%);
    }
  `;
  document.head.appendChild(style);
</script>
