---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Input from '../components/ui/Input.astro';
import Badge from '../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale, Astro.url);
await loadTranslations(locale);

const contactMethods = [
  {
    icon: 'ðŸ“§',
    title: 'Email',
    description: 'sales@tesoro-crm.nl',
    action: 'mailto:sales@tesoro-crm.nl'
  },
  {
    icon: 'ðŸ“±',
    title: 'WhatsApp',
    description: '+31 6 1234 5678',
    action: 'https://wa.me/31612345678'
  },
  {
    icon: 'ðŸ“ž',
    title: 'Telefoon',
    description: '+31 20 123 4567',
    action: 'tel:+31201234567'
  }
];
---

<Layout
  title="Contact - Tesoro CRM"
  description="Neem contact op met ons team voor vragen over Tesoro CRM. Demo aanvragen, support of algemene informatie."
>
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-16">
        <Badge variant="primary" size="md" class="mb-4">
          Neem Contact Op
        </Badge>
        <h1 class="text-4xl lg:text-5xl font-display font-bold text-neutral-900 mb-6">
          Klaar om te beginnen?
        </h1>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          Heb je vragen over Tesoro CRM? Wil je een demo boeken of meer weten over onze prijzen? Ons team helpt je graag verder.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <Card variant="default" padding="lg">
          <h2 class="text-2xl font-display font-bold text-neutral-900 mb-6">
            Stuur ons een bericht
          </h2>

          <form action="/api/contact" method="POST" class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              <Input
                name="firstName"
                label="Voornaam"
                placeholder="Jan"
                required
              />
              <Input
                name="lastName"
                label="Achternaam"
                placeholder="Jansen"
                required
              />
            </div>

            <Input
              type="email"
              name="email"
              label="E-mailadres"
              placeholder="jan.jansen@bedrijf.nl"
              required
            />

            <Input
              type="tel"
              name="phone"
              label="Telefoonnummer"
              placeholder="+31 6 1234 5678"
            />

            <div>
              <label class="block text-sm font-medium text-neutral-700 mb-2">
                Onderwerp
              </label>
              <select
                name="subject"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary transition-all duration-200"
                required
              >
                <option value="">Selecteer een onderwerp</option>
                <option value="demo">Demo aanvragen</option>
                <option value="pricing">Vragen over prijzen</option>
                <option value="support">Technische support</option>
                <option value="partnership">Partnerschap</option>
                <option value="other">Anders</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-neutral-700 mb-2">
                Bericht <span class="text-error">*</span>
              </label>
              <textarea
                name="message"
                id="message"
                rows="5"
                class="w-full px-4 py-3 rounded-lg border border-neutral-300 focus:border-primary focus:ring-2 focus:ring-primary transition-all duration-200 resize-none"
                placeholder="Vertel ons meer over je vraag..."
                required
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                name="privacy"
                id="privacy"
                class="mt-1"
                required
              />
              <label for="privacy" class="text-sm text-neutral-600">
                Ik ga akkoord met het <a href={getLocalizedPath('/privacy', locale)} class="text-primary hover:underline">privacybeleid</a> en geef toestemming voor contact.
              </label>
            </div>

            <Button variant="primary" size="lg" type="submit" fullWidth>
              Bericht Versturen
            </Button>
          </form>
        </Card>

        <!-- Contact Methods -->
        <div class="space-y-6">
          <Card variant="default" padding="lg">
            <h3 class="text-xl font-display font-bold text-neutral-900 mb-4">
              Andere manieren om contact op te nemen
            </h3>
            <p class="text-neutral-600 mb-6">
              Liever direct contact? Hier vind je onze contactgegevens.
            </p>

            <div class="space-y-4">
              {contactMethods.map((method) => (
                <a
                  href={method.action}
                  class="flex items-center gap-4 p-4 rounded-lg border border-neutral-200 hover:border-primary hover:bg-primary/5 transition-all duration-200 group"
                >
                  <div class="text-2xl">{method.icon}</div>
                  <div>
                    <div class="font-semibold text-neutral-900 group-hover:text-primary">
                      {method.title}
                    </div>
                    <div class="text-sm text-neutral-600">
                      {method.description}
                    </div>
                  </div>
                  <div class="ml-auto text-primary opacity-0 group-hover:opacity-100 transition-opacity">
                    â†’
                  </div>
                </a>
              ))}
            </div>
          </Card>

          <Card variant="elevated" padding="lg">
            <h4 class="font-semibold text-neutral-900 mb-2">
              Snel antwoord gegarandeerd
            </h4>
            <p class="text-sm text-neutral-600">
              We streven ernaar om binnen 24 uur te reageren op al je vragen. Voor urgente zaken kun je ons altijd bellen.
            </p>
          </Card>
        </div>
      </div>
    </div>
  </section>
</Layout>
