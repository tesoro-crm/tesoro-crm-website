---
import type { CTASection, Language } from '../../../types/blog';
import Button from '../../ui/Button.astro';

interface Props {
  section: CTASection;
  lang: Language;
}

const { section, lang } = Astro.props;
const title = section.title?.[lang];
const content = section.content[lang];

// Map button styles from JSON to Button component variants
const mapStyleToVariant = (style: string): 'primary' | 'secondary' | 'outline' | 'white' => {
  switch (style) {
    case 'primary':
      return 'white'; // White text on dark CTA background
    case 'secondary':
      return 'outline'; // Transparent with border
    case 'outline':
      return 'outline';
    default:
      return 'white';
  }
};
---

<section class="blog-section blog-section--cta" id={section.id}>
  <div class="cta-box">
    {title && <h2 class="cta-box__title">{title}</h2>}
    <div class="cta-box__content" set:html={content.text} />
    
    <div class="cta-box__buttons">
      {section.buttons.map((button) => (
        <Button
          href={button.url}
          variant={mapStyleToVariant(button.style)}
          size="lg"
        >
          {button.text[lang]}
        </Button>
      ))}
    </div>
  </div>
</section>

<style>
  .blog-section--cta {
    margin: 4rem 0 3rem;
  }

  .cta-box {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    padding: 3rem 2.5rem;
    border-radius: 12px;
    text-align: center;
  }

  .cta-box__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.3;
    letter-spacing: -0.02em;
  }

  .cta-box__content {
    font-size: 1.125rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.95;
  }

  .cta-box__content :global(p) {
    margin-bottom: 0.75rem;
  }

  .cta-box__content :global(p:last-child) {
    margin-bottom: 0;
  }

  .cta-box__buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 640px) {
    .cta-box {
      padding: 2rem 1.5rem;
    }

    .cta-box__title {
      font-size: 1.5rem;
    }

    .cta-box__buttons {
      flex-direction: column;
    }
  }
</style>
