---
// Visual for call reminder notification
---

<div class="call-reminder-container">
  <div class="notification-popup">
    <div class="notification-header">
      <div class="notification-icon">
        <span class="icon">notifications_active</span>
      </div>
      <div class="notification-title">
        <div class="title-text">Reminder: Bel klant terug</div>
        <div class="time-text">Nu</div>
      </div>
    </div>

    <div class="notification-body">
      <div class="client-info">
        <div class="client-avatar">JJ</div>
        <div class="client-details">
          <div class="client-name">Jan Jansen</div>
          <div class="client-meta">
            <span class="icon">schedule</span>
            <span>7 dagen sinds laatste contact</span>
          </div>
        </div>
      </div>

      <div class="reminder-details">
        <div class="detail-row">
          <span class="icon">phone</span>
          <span>+31 6 1234 5678</span>
        </div>
        <div class="detail-row">
          <span class="icon">email</span>
          <span>jan.jansen@email.nl</span>
        </div>
        <div class="detail-row interest">
          <span class="icon">home</span>
          <span>Interesse: Villa Marbella</span>
        </div>
      </div>

      <div class="action-buttons">
        <button class="btn-primary">
          <span class="icon">call</span>
          <span>Nu bellen</span>
        </button>
        <button class="btn-secondary">
          <span class="icon">schedule</span>
          <span>Herinner later</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Background context - dashboard blur -->
  <div class="dashboard-background">
    <div class="dashboard-item"></div>
    <div class="dashboard-item"></div>
    <div class="dashboard-item"></div>
  </div>
</div>

<style>
  .call-reminder-container {
    position: relative;
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
  }

  .dashboard-background {
    padding: 2rem;
    background: #f9fafb;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    filter: blur(2px);
    opacity: 0.6;
  }

  .dashboard-item {
    height: 60px;
    background: linear-gradient(90deg, #e5e7eb 0%, #f3f4f6 50%, #e5e7eb 100%);
    border-radius: 0.5rem;
    animation: shimmer 2s infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -200px 0;
    }
    100% {
      background-position: calc(200px + 100%) 0;
    }
  }

  .notification-popup {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: calc(100% - 2rem);
    max-width: 400px;
    background: white;
    border-radius: 1rem;
    box-shadow: 0 20px 60px rgba(10, 31, 68, 0.25), 0 0 0 1px rgba(10, 31, 68, 0.08);
    animation: popIn 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    z-index: 10;
  }

  @keyframes popIn {
    0% {
      opacity: 0;
      transform: translate(-50%, -50%) scale(0.8);
    }
    100% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }
  }

  .notification-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem;
    border-bottom: 1px solid #f0f0f0;
  }

  .notification-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #f59e0b, #f97316);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.7);
    }
    50% {
      box-shadow: 0 0 0 10px rgba(245, 158, 11, 0);
    }
  }

  .notification-icon .icon {
    color: white;
    font-size: 1.5rem;
    animation: ring 2s infinite;
  }

  @keyframes ring {
    0%, 100% {
      transform: rotate(0deg);
    }
    10%, 30% {
      transform: rotate(-10deg);
    }
    20%, 40% {
      transform: rotate(10deg);
    }
  }

  .notification-title {
    flex: 1;
  }

  .title-text {
    font-weight: 600;
    color: #0a1f44;
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .time-text {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .notification-body {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .client-info {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-radius: 0.75rem;
  }

  .client-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, #003366, #0066cc);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 1rem;
    flex-shrink: 0;
  }

  .client-details {
    flex: 1;
  }

  .client-name {
    font-weight: 600;
    color: #0a1f44;
    margin-bottom: 0.25rem;
  }

  .client-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: #92400e;
    font-weight: 500;
  }

  .client-meta .icon {
    font-size: 1rem;
    color: #f59e0b;
  }

  .reminder-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .detail-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: #f9fafb;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    color: #4b5563;
  }

  .detail-row.interest {
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    color: #166534;
    font-weight: 500;
  }

  .detail-row .icon {
    font-size: 1.125rem;
    color: #6b7280;
  }

  .detail-row.interest .icon {
    color: #10b981;
  }

  .action-buttons {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
  }

  .action-buttons button {
    flex: 1;
    padding: 0.875rem 1rem;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 0.875rem;
    cursor: pointer;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
  }

  .btn-secondary {
    background: #f3f4f6;
    color: #4b5563;
  }

  .btn-secondary:hover {
    background: #e5e7eb;
  }

  .action-buttons button .icon {
    font-size: 1.125rem;
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .notification-popup {
      width: calc(100% - 1rem);
    }

    .notification-header {
      padding: 1rem;
    }

    .notification-icon {
      width: 40px;
      height: 40px;
    }

    .notification-icon .icon {
      font-size: 1.25rem;
    }

    .notification-body {
      padding: 1rem;
      gap: 1rem;
    }

    .client-info {
      padding: 0.75rem;
    }

    .client-avatar {
      width: 40px;
      height: 40px;
      font-size: 0.875rem;
    }

    .action-buttons {
      flex-direction: column;
    }

    .action-buttons button {
      width: 100%;
    }
  }
</style>
