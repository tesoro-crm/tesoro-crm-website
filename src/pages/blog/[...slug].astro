<script>
  // Newsletter signup
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('[data-newsletter-form]') as HTMLFormElement;
    if (!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
      const email = emailInput?.value;

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });

        if (response.ok) {
          alert('Thanks for subscribing! Check your email.');
          form.reset();
        } else {
          alert('Something went wrong. Please try again.');
        }
      } catch (error) {
        alert('Something went wrong. Please try again.');
      }
    });
  });

  // Sticky TOC behavior
  const tocNav = document.getElementById('toc-nav');
  if (tocNav) {
    const navHeight = 80; // Height of main navigation
    const stickyOffset = navHeight + 24; // 24px gap
    
    let tocOriginalTop = 0;
    let tocOriginalLeft = 0;
    
    // Calculate position after everything is loaded
    const calculatePosition = () => {
      const rect = tocNav.getBoundingClientRect();
      tocOriginalTop = rect.top + window.scrollY;
      tocOriginalLeft = rect.left;
    };
    
    // Wait for images and layout to settle
    window.addEventListener('load', () => {
      setTimeout(calculatePosition, 100);
    });
    
    // Recalculate on resize
    window.addEventListener('resize', calculatePosition);
    
    window.addEventListener('scroll', () => {
      if (tocOriginalTop === 0) return; // Not initialized yet
      
      const scrollTop = window.scrollY;
      
      if (scrollTop + stickyOffset >= tocOriginalTop) {
        // Make it sticky
        tocNav.style.position = 'fixed';
        tocNav.style.top = `${stickyOffset}px`;
        tocNav.style.left = `${tocOriginalLeft}px`;
        tocNav.style.width = '280px';
      } else {
        // Reset to normal flow
        tocNav.style.position = 'static';
        tocNav.style.top = 'auto';
        tocNav.style.left = 'auto';
        tocNav.style.width = 'auto';
      }
    }, { passive: true });
  }

  // Active section highlighting in TOC
  const observerOptions = {
    rootMargin: '-100px 0px -66%',
    threshold: 0
  };

  const observerCallback = (entries: IntersectionObserverEntry[]) => {
    entries.forEach((entry: IntersectionObserverEntry) => {
      const id = entry.target.getAttribute('id');
      const tocLink = document.querySelector(`a[data-toc-link="${id}"]`);
      
      if (tocLink) {
        if (entry.isIntersecting) {
          // Remove active from all links
          document.querySelectorAll('.toc-link').forEach(link => {
            link.classList.remove('!text-blue-600', '!font-semibold', 'border-l-2', 'border-blue-600', 'pl-2', '-ml-2');
          });
          
          // Add active to current link
          tocLink.classList.add('!text-blue-600', '!font-semibold', 'border-l-2', 'border-blue-600', 'pl-2', '-ml-2');
        }
      }
    });
  };

  const observer = new IntersectionObserver(observerCallback, observerOptions);

  // Observe all sections
  document.querySelectorAll('section[id]').forEach(section => {
    observer.observe(section);
  });
</script>

