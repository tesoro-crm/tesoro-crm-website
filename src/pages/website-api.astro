            {plan.highlight && (
              <Badge variant="primary" size="sm" class="mb-4">
                {t('website_api.pricing_section.popular', locale)}
              </Badge>
            )}
            <h3 class="text-xl font-semibold text-neutral-900 mb-2">{plan.title}</h3>
            <p class="text-3xl font-bold text-primary mb-3">{plan.price}</p>
            <p class="text-sm text-neutral-700 mb-6">{plan.description}</p>
            <ul class="space-y-2 mb-6">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm text-neutral-700">
                  <span class="icon icon-sm text-success flex-shrink-0">check_circle</span>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
            <Button
              variant={plan.highlight ? 'primary' : 'outline'}
              size="md"
              fullWidth
              href={getLocalizedPath('/contact', locale)}
            >
              {t('website_api.pricing_section.cta', locale)}
            </Button>
          </Card>
        ))}
      </div>

      <div class="text-center mt-8">
        <p class="text-sm text-neutral-600">
          {t('website_api.pricing_section.enterprise_note', locale)}
        </p>
      </div>
    </div>
  </section>

  <!-- Security & Performance Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('website_api.security.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('website_api.security.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {securityFeatures.map((feature) => (
          <Card variant="default" padding="lg">
            <div class="flex items-start gap-4">
              <span class="icon icon-lg text-primary flex-shrink-0">{feature.icon}</span>
              <div>
                <h3 class="text-lg font-semibold text-neutral-900 mb-2">{feature.title}</h3>
                <p class="text-sm text-neutral-700">{feature.description}</p>
              </div>
            </div>
          </Card>
        ))}
      </div>

      <!-- Performance Metrics -->
      <div class="mt-12 bg-gradient-to-r from-primary to-primary-accent rounded-2xl p-8 lg:p-12 text-white">
        <h3 class="text-2xl lg:text-3xl font-display font-bold text-center mb-8">
          {t('website_api.performance.title', locale)}
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-secondary mb-2">
              {t('website_api.performance.metric_1_value', locale)}
            </div>
            <p class="text-white/90">{t('website_api.performance.metric_1_label', locale)}</p>
          </div>
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-secondary mb-2">
              {t('website_api.performance.metric_2_value', locale)}
            </div>
            <p class="text-white/90">{t('website_api.performance.metric_2_label', locale)}</p>
          </div>
          <div class="text-center">
            <div class="text-4xl font-display font-bold text-secondary mb-2">
              {t('website_api.performance.metric_3_value', locale)}
            </div>
            <p class="text-white/90">{t('website_api.performance.metric_3_label', locale)}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('website_api.faq.title', locale)}
        </h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card variant="default" padding="lg">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">{faq.question}</h3>
            <p class="text-neutral-700">{faq.answer}</p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="bg-gradient-to-r from-primary to-primary-accent text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('website_api.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('website_api.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href={getLocalizedPath('/contact', locale)}>
          {t('website_api.cta.cta_primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer" class="border-2 border-white hover:bg-white hover:text-primary">
          {t('website_api.cta.cta_secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
