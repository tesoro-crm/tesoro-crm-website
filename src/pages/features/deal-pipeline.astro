---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);

const pipelineStages = [
  {
    name: 'Proposed',
    description: 'Properties voorgesteld aan klant',
    color: 'bg-blue-100 text-blue-800',
    count: '12',
  },
  {
    name: 'Pending',
    description: 'Wachten op klantreactie',
    color: 'bg-yellow-100 text-yellow-800',
    count: '8',
  },
  {
    name: 'Interesting',
    description: 'Klant heeft interesse getoond',
    color: 'bg-green-100 text-green-800',
    count: '5',
  },
  {
    name: 'Viewing',
    description: 'Bezichtiging gepland of uitgevoerd',
    color: 'bg-purple-100 text-purple-800',
    count: '3',
  },
  {
    name: 'Offer',
    description: 'Bod gedaan op de property',
    color: 'bg-orange-100 text-orange-800',
    count: '2',
  },
  {
    name: 'Closed',
    description: 'Deal succesvol afgesloten',
    color: 'bg-emerald-100 text-emerald-800',
    count: '1',
  },
];

const features = [
  {
    title: 'Drag & Drop Interface',
    description: 'Sleep deals eenvoudig tussen kolommen. Intuïtieve interface die iedereen meteen begrijpt.',
  },
  {
    title: 'Geautomatiseerde Alerts',
    description: 'Krijg meldingen wanneer deals te lang in één stadium blijven steken.',
  },
  {
    title: 'Deal Geschiedenis',
    description: 'Volledige tijdlijn van alle acties en communicatie per deal.',
  },
  {
    title: 'Team Overzicht',
    description: 'Zie in één oogopslag hoe je team presteert en waar knelpunten zitten.',
  },
];

const benefits = [
  {
    metric: '65%',
    description: 'sneller van lead naar closing',
  },
  {
    metric: '0',
    description: 'deals die tussen de mazen vallen',
  },
  {
    metric: '90%',
    description: 'van makelaars heeft beter overzicht',
  },
];

const automation = [
  {
    trigger: 'Klant markeert property als interessant',
    action: 'Deal verplaatst automatisch naar "Interesting"',
  },
  {
    trigger: 'Bezichtiging gepland in agenda',
    action: 'Deal verplaatst automatisch naar "Viewing"',
  },
  {
    trigger: 'Deal 7 dagen in zelfde stadium',
    action: 'Automatische reminder naar makelaar',
  },
  {
    trigger: 'Contract getekend',
    action: 'Deal verplaatst automatisch naar "Closed"',
  },
];
---

<Layout 
  title={t('feature_pages.deal_pipeline.meta_title', locale)}
  description={t('feature_pages.deal_pipeline.meta_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-6">
            {t('feature_pages.deal_pipeline.hero.badge', locale)}
          </Badge>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
            {t('feature_pages.deal_pipeline.hero.title', locale)}
          </h1>
          
          <p class="text-lg sm:text-xl text-neutral-700 mb-8">
            {t('feature_pages.deal_pipeline.hero.description', locale)}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <Button variant="primary" size="lg" href={getLocalizedPath('/signup', locale)}>
              {t('feature_pages.deal_pipeline.cta.primary', locale)}
            </Button>
            <Button variant="outline" size="lg" href={getLocalizedPath('/demo', locale)}>
              {t('feature_pages.deal_pipeline.cta.secondary', locale)}
            </Button>
          </div>

          <div class="grid grid-cols-3 gap-4">
            {benefits.map((benefit) => (
              <div class="text-center">
                <div class="text-2xl font-bold text-primary mb-1">{benefit.metric}</div>
                <div class="text-sm text-neutral-600">{benefit.description}</div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="relative">
          <div class="bg-white rounded-2xl shadow-xl p-6 overflow-hidden">
            <div class="flex items-center justify-between mb-6">
              <h3 class="font-semibold text-neutral-900">Pipeline Overzicht</h3>
              <Badge variant="secondary" size="sm">Live</Badge>
            </div>
            
            <div class="grid grid-cols-3 gap-3">
              {pipelineStages.slice(0, 3).map((stage) => (
                <div class="bg-neutral-50 rounded-lg p-3">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-xs font-semibold text-neutral-700 uppercase tracking-wide">{stage.name}</span>
                    <span class={`text-xs px-2 py-1 rounded-full ${stage.color}`}>{stage.count}</span>
                  </div>
                  
                  <div class="space-y-2">
                    <div class="bg-white rounded p-2 shadow-sm">
                      <div class="text-xs font-medium">Villa Marbella</div>
                      <div class="text-xs text-neutral-600">Familie Jansen</div>
                    </div>
                    
                    {stage.count !== '1' && (
                      <div class="bg-white rounded p-2 shadow-sm">
                        <div class="text-xs font-medium">Apartment Centro</div>
                        <div class="text-xs text-neutral-600">Hr. Bakker</div>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
            
            <div class="grid grid-cols-3 gap-3 mt-3">
              {pipelineStages.slice(3, 6).map((stage) => (
                <div class="bg-neutral-50 rounded-lg p-3">
                  <div class="flex items-center justify-between mb-3">
                    <span class="text-xs font-semibold text-neutral-700 uppercase tracking-wide">{stage.name}</span>
                    <span class={`text-xs px-2 py-1 rounded-full ${stage.color}`}>{stage.count}</span>
                  </div>
                  
                  <div class="space-y-2">
                    {stage.count !== '0' && (
                      <div class="bg-white rounded p-2 shadow-sm">
                        <div class="text-xs font-medium">Penthouse Valencia</div>
                        <div class="text-xs text-neutral-600">Fam. Rodriguez</div>
                      </div>
                    )}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Pipeline Stages Detail -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.deal_pipeline.workflow.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.deal_pipeline.hero.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {pipelineStages.map((stage, index) => (
          <Card variant="default" padding="lg" class="relative">
            <div class="flex items-center justify-between mb-4">
              <div class={`px-3 py-1 rounded-full text-sm font-medium ${stage.color}`}>
                {stage.name}
              </div>
              <div class="text-2xl font-bold text-neutral-400">
                {index + 1}
              </div>
            </div>
            
            <h3 class="text-lg font-semibold text-neutral-900 mb-2">
              Stage {index + 1}: {stage.name}
            </h3>
            <p class="text-neutral-700">
              {stage.description}
            </p>
            
            {index < pipelineStages.length - 1 && (
              <div class="hidden lg:block absolute top-1/2 -right-3 w-6 h-0.5 bg-neutral-300"></div>
            )}
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.deal_pipeline.benefits.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          {t('feature_pages.deal_pipeline.benefits.title', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {features.map((feature) => (
          <Card variant="default" padding="lg" class="h-full">
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-neutral-700">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Automation Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          Automatische Pipeline Updates
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          Deals verplaatsen zich automatisch op basis van klantacties en gebeurtenissen.
        </p>
      </div>

      <div class="space-y-6">
        {automation.map((item, index) => (
          <Card variant="default" padding="lg">
            <div class="flex items-center gap-6">
              
              <div class="flex-1">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 items-center">
                  <div>
                    <h3 class="font-semibold text-neutral-900 mb-2">Trigger</h3>
                    <p class="text-neutral-700">{item.trigger}</p>
                  </div>
                  
                  <div>
                    <h3 class="font-semibold text-neutral-900 mb-2">Automatische Actie</h3>
                    <p class="text-neutral-700">{item.action}</p>
                  </div>
                </div>
              </div>
              
              <div class="text-primary flex-shrink-0">
                <div class="w-8 h-8 bg-primary/10 rounded-full flex items-center justify-center">
                  <span class="text-sm font-bold">{index + 1}</span>
                </div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Analytics Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            Pipeline Analytics
          </h2>
          
          <div class="space-y-6">
            <div>
              <h3 class="text-xl font-semibold text-neutral-900 mb-3">Inzichten die Helpen</h3>
              <ul class="space-y-2">
                <li class="flex items-center gap-2">
                  <span class="text-success">✓</span>
                  <span>Gemiddelde tijd per pipeline stage</span>
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-success">✓</span>
                  <span>Conversie rates tussen stages</span>
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-success">✓</span>
                  <span>Knelpunten in je sales proces</span>
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-success">✓</span>
                  <span>Team performance vergelijking</span>
                </li>
                <li class="flex items-center gap-2">
                  <span class="text-success">✓</span>
                  <span>Revenue forecasting</span>
                </li>
              </ul>
            </div>
            
            <div>
              <h3 class="text-xl font-semibold text-neutral-900 mb-3">Actie-gerichte Rapporten</h3>
              <p class="text-neutral-700">
                Krijg wekelijkse rapporten met concrete aanbevelingen om je 
                conversie te verhogen en je sales cyclus te verkorten.
              </p>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">Pipeline Metrics</h3>
          
          <div class="space-y-6">
            <div class="flex justify-between items-center border-b border-neutral-200 pb-3">
              <span class="text-neutral-700">Proposed → Interesting</span>
              <span class="text-2xl font-bold text-primary">23%</span>
            </div>
            
            <div class="flex justify-between items-center border-b border-neutral-200 pb-3">
              <span class="text-neutral-700">Interesting → Viewing</span>
              <span class="text-2xl font-bold text-secondary">67%</span>
            </div>
            
            <div class="flex justify-between items-center border-b border-neutral-200 pb-3">
              <span class="text-neutral-700">Viewing → Offer</span>
              <span class="text-2xl font-bold text-success">45%</span>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-neutral-700">Offer → Closed</span>
              <span class="text-2xl font-bold text-emerald-600">78%</span>
            </div>
          </div>
          
          <div class="mt-8 p-4 bg-white rounded-lg">
            <div class="text-center">
              <div class="text-3xl font-bold text-primary mb-2">5.2%</div>
              <div class="text-neutral-700">Overall conversie rate</div>
              <div class="text-sm text-success mt-1">↑ 40% sinds vorige maand</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Integration Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          Integreert met je Hele Workflow
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          De pipeline werkt naadloos samen met alle andere Tesoro CRM features.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">Smart Matching</h3>
          <p class="text-neutral-700">
            Nieuwe matches worden automatisch als deals toegevoegd aan de pipeline.
          </p>
        </Card>

        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">Klantportaal</h3>
          <p class="text-neutral-700">
            Klantfeedback verplaatst deals automatisch naar de juiste pipeline stage.
          </p>
        </Card>

        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">E-mail Integratie</h3>
          <p class="text-neutral-700">
            Alle communicatie wordt automatisch gekoppeld aan de juiste deal.
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('feature_pages.deal_pipeline.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('feature_pages.deal_pipeline.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href={getLocalizedPath('/signup', locale)}>
          {t('feature_pages.deal_pipeline.cta.primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href={getLocalizedPath('/features', locale)} class="border-2 border-white hover:bg-white hover:text-primary">
          {t('feature_pages.deal_pipeline.cta.secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>