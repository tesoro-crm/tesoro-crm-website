---
import Button from '../ui/Button.astro';
import { t } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

export interface Props {
  locale: Language;
}

const { locale } = Astro.props;
---

<section class="py-16 lg:py-24 bg-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <div class="inline-block px-4 py-2 bg-primary/10 text-primary rounded-full text-sm font-semibold mb-6">
          {t('home.demo.badge', locale)}
        </div>
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
          {t('home.demo.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          {t('home.demo.description', locale)}
        </p>
        <ul class="space-y-4 mb-8">
          <li class="flex items-start gap-3">
            <span class="text-success text-xl">✓</span>
            <span class="text-neutral-700">{t('home.demo.feature_1', locale)}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-success text-xl">✓</span>
            <span class="text-neutral-700">{t('home.demo.feature_2', locale)}</span>
          </li>
          <li class="flex items-start gap-3">
            <span class="text-success text-xl">✓</span>
            <span class="text-neutral-700">{t('home.demo.feature_3', locale)}</span>
          </li>
        </ul>
        <Button variant="primary" size="lg" data-modal-target="demo-modal">
          {t('home.demo.cta', locale)}
        </Button>
      </div>

      <div>
        <div 
          class="relative aspect-video rounded-xl overflow-hidden shadow-2xl cursor-pointer group"
          data-video-modal-target="video-modal"
        >
          <iframe
            src={`https://customer-${import.meta.env.PUBLIC_CLOUDFLARE_STREAM_CUSTOMER_CODE || "5j7pwes53hyjitp3"}.cloudflarestream.com/${import.meta.env.PUBLIC_CLOUDFLARE_STREAM_VIDEO_ID || "8047f4b03eafde4d7c026add267cabcf"}/iframe?muted=true&loop=true&autoplay=true&controls=false&poster=https://customer-5j7pwes53hyjitp3.cloudflarestream.com/8047f4b03eafde4d7c026add267cabcf/thumbnails/thumbnail.jpg`}
            class="w-full h-full"
            style="border: none;"
            allow="autoplay; encrypted-media;"
            loading="lazy"
          ></iframe>

          <div class="absolute inset-0 bg-black/20 group-hover:bg-black/30 transition-all duration-300 flex items-center justify-center">
            <div class="w-20 h-20 bg-white/90 rounded-full flex items-center justify-center transform group-hover:scale-110 transition-transform duration-300 shadow-xl">
              <svg class="w-10 h-10 text-primary ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>

          <div class="absolute bottom-4 right-4 bg-black/70 text-white text-sm px-3 py-1.5 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            Click to expand
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
