---
import Layout from '../layouts/Layout.astro';
import { sectionsLibrary, getAllTags, type SectionMetadata } from '../data/sections-library';
import { getLocale, loadTranslations } from '../i18n/utils';
import type { Language } from '../i18n/config';

// Import all sections
import HeroSimple from '../components/sections/HeroSimple.astro';
import PainPointSection from '../components/sections/PainPointSection.astro';
import WebsiteShowcase from '../components/sections/WebsiteShowcase.astro';
import LeadWorkflowSection from '../components/sections/LeadWorkflowSection.astro';
import CoCreated from '../components/sections/CoCreated.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import DemoSection from '../components/sections/DemoSection.astro';
import FAQ from '../components/sections/FAQ.astro';
import FinalCTA from '../components/sections/FinalCTA.astro';
import FeaturesGrid from '../components/sections/FeaturesGrid.astro';
import CompetitorComparison from '../components/sections/CompetitorComparison.astro';
import LeadWorkflowVisual from '../components/sections/LeadWorkflowVisual.astro';

const title = 'Sections Catalog - Tesoro Design System';
const description = 'Volledige bibliotheek van alle herbruikbare page sections en blokken';

// Get locale
const locale: Language = getLocale(Astro.currentLocale, Astro.url);
await loadTranslations(locale);

// Group sections by category
const sectionsByCategory = sectionsLibrary.reduce((acc, section) => {
  if (!acc[section.category]) {
    acc[section.category] = [];
  }
  acc[section.category].push(section);
  return acc;
}, {} as Record<string, SectionMetadata[]>);

const categoryLabels: Record<string, { title: string; description: string }> = {
  homepage: {
    title: 'Homepage Sections',
    description: 'Sections gebruikt op de homepage voor hero, pain points, testimonials, etc.',
  },
  blog: {
    title: 'Blog Sections',
    description: 'Content sections voor blog posts zoals quotes, comparisons, steps, etc.',
  },
  features: {
    title: 'Feature Sections',
    description: 'Sections voor feature showcases en product comparisons',
  },
  layout: {
    title: 'Layout Sections',
    description: 'Structurele sections voor page layouts',
  },
  other: {
    title: 'Other Sections',
    description: 'Overige herbruikbare sections en visuals',
  },
};

// Get all unique tags for filtering
const allTags = getAllTags();
---

<Layout title={title} description={description}>
  <div class="sections-catalog">
    <!-- Header -->
    <section class="catalog-header">
      <div class="container">
        <div class="catalog-header__content">
          <h1 class="catalog-header__title">Sections Catalog</h1>
          <p class="catalog-header__subtitle">
            Bibliotheek van {sectionsLibrary.length} herbruikbare page sections met visuele previews
          </p>
        </div>

        <!-- Quick Stats -->
        <div class="catalog-stats">
          <div class="stat-card">
            <span class="stat-card__value">{sectionsLibrary.length}</span>
            <span class="stat-card__label">Total Sections</span>
          </div>
          <div class="stat-card">
            <span class="stat-card__value">{Object.keys(sectionsByCategory).length}</span>
            <span class="stat-card__label">Categories</span>
          </div>
          <div class="stat-card">
            <span class="stat-card__value">{allTags.length}</span>
            <span class="stat-card__label">Tags</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Navigation -->
    <nav class="catalog-nav">
      <div class="container">
        <div class="catalog-nav__title">Jump to:</div>
        <div class="catalog-nav__links">
          {Object.entries(categoryLabels).map(([key, { title }]) => (
            <a href={`#${key}`} class="catalog-nav__link">
              {title}
            </a>
          ))}
        </div>
      </div>
    </nav>

    <div class="container">
      <!-- Sections by Category -->
      {Object.entries(sectionsByCategory).map(([category, sections]) => (
        <section id={category} class="catalog-section">
          <div class="catalog-section__header">
            <h2 class="catalog-section__title">{categoryLabels[category]?.title || category}</h2>
            <p class="catalog-section__desc">{categoryLabels[category]?.description}</p>
            <div class="catalog-section__count">{sections.length} sections</div>
          </div>

          <div class="sections-list">
            {sections.map((section) => {
              return (
                <div class="section-preview-card">
                  {/* Badge */}
                  <div class="section-badge">{section.id}</div>

                  {/* Visual Preview - Homepage sections */}
                  {category === 'homepage' && section.id === 'hero-simple' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Hero Simple">
                        <HeroSimple locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'pain-point-section' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render (callback example)</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Pain Point">
                        <PainPointSection locale={locale} painKey="callback" />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'website-showcase' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Website Showcase">
                        <WebsiteShowcase locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'lead-workflow-section' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Lead Workflow">
                        <LeadWorkflowSection locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'co-created' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Co-Created">
                        <CoCreated locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'testimonials' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Testimonials">
                        <Testimonials locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'demo-section' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Demo CTA">
                        <DemoSection locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'faq' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="FAQ">
                        <FAQ locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'homepage' && section.id === 'final-cta' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Final CTA">
                        <FinalCTA locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'features' && section.id === 'competitor-comparison' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live section render</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Comparison Table">
                        <CompetitorComparison locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'other' && section.id === 'lead-workflow-visual' && (
                    <div class="section-preview">
                      <div class="section-preview__header">
                        <span class="section-preview__label">Preview:</span>
                        <span class="section-preview__note">Live visual component</span>
                      </div>
                      <div class="section-preview__wrapper" data-section-name="Workflow Visual">
                        <LeadWorkflowVisual locale={locale} />
                      </div>
                    </div>
                  )}

                  {category === 'blog' && (
                    <div class="section-preview-placeholder">
                      <div class="placeholder-icon">article</div>
                      <p class="placeholder-text">Blog sections preview</p>
                      <p class="placeholder-note">Deze sections worden gebruikt binnen blog posts</p>
                    </div>
                  )}

                  {category === 'features' && section.id === 'features-grid' && (
                    <div class="section-preview-placeholder">
                      <div class="placeholder-icon">view_module</div>
                      <p class="placeholder-text">Feature sections preview</p>
                      <p class="placeholder-note">Requires feature data to render</p>
                    </div>
                  )}

                  {/* Metadata */}
                  <div class="section-metadata">
                    {/* Header */}
                    <div class="section-metadata__header">
                      <h3 class="section-metadata__name">{section.name}</h3>
                      <div class="section-metadata__tags">
                        {section.tags.slice(0, 3).map((tag) => (
                          <span class="tag">{tag}</span>
                        ))}
                      </div>
                    </div>

                    {/* Description */}
                    <p class="section-metadata__description">{section.description}</p>

                    {/* Visual Info */}
                    <div class="section-metadata__visual">
                      <div class="visual-info">
                        <span class="visual-info__label">Layout:</span>
                        <span class="visual-info__value">{section.visual.layout}</span>
                      </div>
                      {section.visual.background && (
                        <div class="visual-info">
                          <span class="visual-info__label">Background:</span>
                          <span class="visual-info__value">{section.visual.background}</span>
                        </div>
                      )}
                      {section.visual.hasAnimation && (
                        <div class="visual-badge">
                          <span class="icon">animation</span>
                          Animated
                        </div>
                      )}
                    </div>

                    {/* Props */}
                    <div class="section-metadata__props">
                      <div class="props-label">Props:</div>
                      <ul class="props-list">
                        {section.props.map((prop) => (
                          <li class="prop-item">{prop}</li>
                        ))}
                      </ul>
                    </div>

                    {/* Usage */}
                    <div class="section-metadata__usage">
                      <div class="usage-label">
                        <span class="icon">location_on</span>
                        Used in:
                      </div>
                      <ul class="usage-list">
                        {section.usedIn.map((page) => (
                          <li class="usage-item">{page}</li>
                        ))}
                      </ul>
                    </div>

                    {/* Footer */}
                    <div class="section-metadata__footer">
                      <code class="section-path">{section.path}</code>
                      {section.i18n && (
                        <span class="i18n-badge">
                          <span class="icon">language</span>
                          i18n
                        </span>
                      )}
                    </div>
                  </div>
                </div>
              );
            })}
          </div>
        </section>
      ))}

      <!-- Tags Reference -->
      <section class="catalog-section">
        <div class="catalog-section__header">
          <h2 class="catalog-section__title">All Tags</h2>
          <p class="catalog-section__desc">Tags gebruikt voor filtering en categorization</p>
        </div>

        <div class="tags-cloud">
          {allTags.map((tag) => {
            const count = sectionsLibrary.filter(s => s.tags.includes(tag)).length;
            return (
              <span class="tag-cloud-item">
                {tag}
                <span class="tag-count">{count}</span>
              </span>
            );
          })}
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
  /* ===== GLOBAL ===== */
  .sections-catalog {
    min-height: 100vh;
    background: #f8fafc;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* ===== HEADER ===== */
  .catalog-header {
    background: linear-gradient(135deg, #0a1f44 0%, #1e3a5f 100%);
    color: white;
    padding: 4rem 0 3rem;
    margin-bottom: 2rem;
  }

  .catalog-header__content {
    text-align: center;
    margin-bottom: 2rem;
  }

  .catalog-header__title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .catalog-header__subtitle {
    font-size: 1.25rem;
    opacity: 0.9;
  }

  /* ===== STATS ===== */
  .catalog-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }

  .stat-card__value {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: #F5B400;
    margin-bottom: 0.5rem;
  }

  .stat-card__label {
    display: block;
    font-size: 0.875rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* ===== NAVIGATION ===== */
  .catalog-nav {
    background: white;
    border-bottom: 2px solid #e2e8f0;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 10;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .catalog-nav .container {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .catalog-nav__title {
    font-weight: 600;
    color: #64748b;
    font-size: 0.875rem;
  }

  .catalog-nav__links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .catalog-nav__link {
    padding: 0.5rem 1rem;
    background: #f1f5f9;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #475569;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .catalog-nav__link:hover {
    background: #003366;
    color: white;
  }

  /* ===== SECTION ===== */
  .catalog-section {
    margin: 3rem 0 4rem;
  }

  .catalog-section__header {
    margin-bottom: 2rem;
    position: relative;
  }

  .catalog-section__title {
    font-size: 2rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.5rem;
    letter-spacing: -0.01em;
  }

  .catalog-section__desc {
    font-size: 1rem;
    color: #64748b;
  }

  .catalog-section__count {
    position: absolute;
    top: 0;
    right: 0;
    background: linear-gradient(135deg, #003366 0%, #0a4a7a 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  /* ===== SECTIONS LIST ===== */
  .sections-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* ===== SECTION PREVIEW CARD ===== */
  .section-preview-card {
    background: white;
    border: 2px solid #e2e8f0;
    border-radius: 16px;
    overflow: hidden;
    position: relative;
    transition: all 0.3s ease;
  }

  .section-preview-card:hover {
    border-color: #003366;
    box-shadow: 0 8px 24px -4px rgba(0, 51, 102, 0.12);
  }

  /* Badge */
  .section-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: linear-gradient(135deg, #003366 0%, #0a4a7a 100%);
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    font-family: 'Monaco', 'Courier New', monospace;
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    z-index: 2;
    letter-spacing: 0.3px;
    box-shadow: 0 2px 8px rgba(0, 51, 102, 0.3);
  }

  /* ===== SECTION PREVIEW ===== */
  .section-preview {
    border-bottom: 2px solid #e2e8f0;
    position: relative;
  }

  .section-preview__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: #f8fafc;
    border-bottom: 1px solid #e2e8f0;
  }

  .section-preview__label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-preview__note {
    font-size: 0.75rem;
    color: #10b981;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .section-preview__note::before {
    content: '‚óè';
    color: #10b981;
  }

  .section-preview__wrapper {
    /* Reset any potential container styles */
    width: 100%;
    overflow: hidden;
    position: relative;
  }

  /* Overlay labels on sections - show section name from data attribute */
  .section-preview__wrapper::before {
    content: attr(data-section-name);
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0, 51, 102, 0.95);
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    font-family: 'Monaco', 'Courier New', monospace;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    z-index: 100;
    letter-spacing: 0.5px;
    box-shadow: 0 4px 12px rgba(0, 51, 102, 0.4);
    pointer-events: none;
    text-transform: uppercase;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Add visual indicator on hover */
  .section-preview__wrapper {
    transition: all 0.3s ease;
  }

  .section-preview:hover .section-preview__wrapper {
    box-shadow: inset 0 0 0 3px rgba(0, 51, 102, 0.15);
  }

  /* Scale down preview for large sections */
  .section-preview__wrapper :global(section) {
    transform-origin: top center;
    position: relative;
  }

  /* ===== PREVIEW PLACEHOLDER ===== */
  .section-preview-placeholder {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
    border-bottom: 2px solid #e2e8f0;
    text-align: center;
  }

  .placeholder-icon {
    font-family: 'Material Symbols Outlined';
    font-size: 3rem;
    color: #cbd5e1;
    margin-bottom: 1rem;
  }

  .placeholder-text {
    font-size: 1.125rem;
    font-weight: 600;
    color: #64748b;
    margin-bottom: 0.5rem;
  }

  .placeholder-note {
    font-size: 0.875rem;
    color: #94a3b8;
  }

  /* ===== SECTION METADATA ===== */
  .section-metadata {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Header */
  .section-metadata__header {
    /* No extra margin-top needed */
  }

  .section-metadata__name {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .section-metadata__tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    background: #f1f5f9;
    color: #64748b;
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 6px;
    text-transform: lowercase;
  }

  /* Description */
  .section-metadata__description {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: #475569;
  }

  /* Visual Info */
  .section-metadata__visual {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    align-items: center;
    padding: 0.75rem;
    background: #f8fafc;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
  }

  .visual-info {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .visual-info__label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #64748b;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .visual-info__value {
    font-size: 0.875rem;
    font-weight: 500;
    color: #1e293b;
    font-family: 'Monaco', 'Courier New', monospace;
  }

  .visual-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.25rem 0.625rem;
    background: #dbeafe;
    color: #1e40af;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 6px;
  }

  .visual-badge .icon {
    font-size: 0.875rem;
  }

  /* Props */
  .section-metadata__props {
    padding: 0.75rem;
    background: #fef3c7;
    border-radius: 8px;
    border-left: 3px solid #f59e0b;
  }

  .props-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: #92400e;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .props-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .prop-item {
    font-size: 0.8125rem;
    font-family: 'Monaco', 'Courier New', monospace;
    color: #78350f;
  }

  /* Usage */
  .section-metadata__usage {
    padding: 0.75rem;
    background: #f0fdf4;
    border-radius: 8px;
    border-left: 3px solid #22c55e;
  }

  .usage-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #166534;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  .usage-label .icon {
    font-size: 0.875rem;
  }

  .usage-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .usage-item {
    font-size: 0.8125rem;
    color: #15803d;
  }

  /* Footer */
  .section-metadata__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.75rem;
    border-top: 1px solid #e2e8f0;
    margin-top: auto;
  }

  .section-path {
    font-size: 0.75rem;
    color: #64748b;
    font-family: 'Monaco', 'Courier New', monospace;
    background: #f8fafc;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .i18n-badge {
    display: flex;
