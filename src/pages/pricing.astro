---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import { getLocale, loadTranslations, t } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);

const plans = [
  {
    name: t('pricing.plans.starter.name', locale),
    price: t('pricing.plans.starter.price', locale),
    period: t('pricing.plans.starter.period', locale),
    description: t('pricing.plans.starter.description', locale),
    features: [
      t('pricing.plans.starter.feature_1', locale),
      t('pricing.plans.starter.feature_2', locale),
      t('pricing.plans.starter.feature_3', locale),
      t('pricing.plans.starter.feature_4', locale),
      t('pricing.plans.starter.feature_5', locale),
      t('pricing.plans.starter.feature_6', locale),
    ],
    cta: t('pricing.plans.starter.cta', locale),
    highlighted: false,
  },
  {
    name: t('pricing.plans.professional.name', locale),
    price: t('pricing.plans.professional.price', locale),
    period: t('pricing.plans.professional.period', locale),
    description: t('pricing.plans.professional.description', locale),
    features: [
      t('pricing.plans.professional.feature_1', locale),
      t('pricing.plans.professional.feature_2', locale),
      t('pricing.plans.professional.feature_3', locale),
      t('pricing.plans.professional.feature_4', locale),
      t('pricing.plans.professional.feature_5', locale),
      t('pricing.plans.professional.feature_6', locale),
      t('pricing.plans.professional.feature_7', locale),
      t('pricing.plans.professional.feature_8', locale),
    ],
    cta: t('pricing.plans.professional.cta', locale),
    highlighted: true,
    badge: t('pricing.plans.professional.badge', locale),
  },
  {
    name: t('pricing.plans.enterprise.name', locale),
    price: t('pricing.plans.enterprise.price', locale),
    period: t('pricing.plans.enterprise.period', locale),
    description: t('pricing.plans.enterprise.description', locale),
    features: [
      t('pricing.plans.enterprise.feature_1', locale),
      t('pricing.plans.enterprise.feature_2', locale),
      t('pricing.plans.enterprise.feature_3', locale),
      t('pricing.plans.enterprise.feature_4', locale),
      t('pricing.plans.enterprise.feature_5', locale),
      t('pricing.plans.enterprise.feature_6', locale),
      t('pricing.plans.enterprise.feature_7', locale),
      t('pricing.plans.enterprise.feature_8', locale),
    ],
    cta: t('pricing.plans.enterprise.cta', locale),
    highlighted: false,
  },
];

const addons = [
  {
    name: t('pricing.addons.addon_1_name', locale),
    price: t('pricing.addons.addon_1_price', locale),
    description: t('pricing.addons.addon_1_description', locale),
  },
  {
    name: t('pricing.addons.addon_2_name', locale),
    price: t('pricing.addons.addon_2_price', locale),
    description: t('pricing.addons.addon_2_description', locale),
  },
  {
    name: t('pricing.addons.addon_3_name', locale),
    price: t('pricing.addons.addon_3_price', locale),
    description: t('pricing.addons.addon_3_description', locale),
  },
  {
    name: t('pricing.addons.addon_4_name', locale),
    price: t('pricing.addons.addon_4_price', locale),
    description: t('pricing.addons.addon_4_description', locale),
  },
];

const faqs = [
  {
    question: t('pricing.faq.question_1', locale),
    answer: t('pricing.faq.answer_1', locale),
  },
  {
    question: t('pricing.faq.question_2', locale),
    answer: t('pricing.faq.answer_2', locale),
  },
  {
    question: t('pricing.faq.question_3', locale),
    answer: t('pricing.faq.answer_3', locale),
  },
  {
    question: t('pricing.faq.question_4', locale),
    answer: t('pricing.faq.answer_4', locale),
  },
  {
    question: t('pricing.faq.question_5', locale),
    answer: t('pricing.faq.answer_5', locale),
  },
  {
    question: t('pricing.faq.question_6', locale),
    answer: t('pricing.faq.answer_6', locale),
  },
];
---

<Layout 
  title={t('meta.pricing_title', locale)}
  description={t('meta.pricing_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <Badge variant="primary" size="md" class="mb-6">
        {t('pricing.hero.badge', locale)}
      </Badge>
      
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
        {t('pricing.hero.title', locale)}
      </h1>
      
      <p class="text-lg sm:text-xl text-neutral-600 mb-8 max-w-3xl mx-auto">
        {t('pricing.hero.description', locale)}
      </p>

      <div class="flex items-center justify-center gap-4 text-sm text-neutral-600">
        <span class="flex items-center gap-2">
          <span class="text-success text-xl">✓</span>
          {t('pricing.hero.trust_1', locale)}
        </span>
        <span class="flex items-center gap-2">
          <span class="text-success text-xl">✓</span>
          {t('pricing.hero.trust_2', locale)}
        </span>
        <span class="flex items-center gap-2">
          <span class="text-success text-xl">✓</span>
          {t('pricing.hero.trust_3', locale)}
        </span>
      </div>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {plans.map((plan) => (
          <Card 
            variant={plan.highlighted ? 'bordered' : 'default'} 
            padding="lg"
            class={`flex flex-col relative ${plan.highlighted ? 'ring-2 ring-primary shadow-xl scale-105' : ''}`}
          >
            {plan.badge && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                <Badge variant="primary" size="sm">
                  {plan.badge}
                </Badge>
              </div>
            )}
            
            <div class="text-center mb-6">
              <h3 class="text-2xl font-display font-bold text-neutral-900 mb-2">
                {plan.name}
              </h3>
              <div class="flex items-baseline justify-center gap-1 mb-3">
                <span class="text-4xl font-display font-bold text-primary">{plan.price}</span>
                {plan.period && <span class="text-neutral-600">{plan.period}</span>}
              </div>
              <p class="text-sm text-neutral-600">{plan.description}</p>
            </div>

            <ul class="space-y-3 mb-8 flex-grow">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-2 text-sm">
                  <span class="text-success text-lg flex-shrink-0">✓</span>
                  <span class="text-neutral-700">{feature}</span>
                </li>
              ))}
            </ul>

            <Button 
              variant={plan.highlighted ? 'primary' : 'outline'} 
              size="lg" 
              fullWidth
              href="/signup"
            >
              {plan.cta}
            </Button>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-4">
          Bespaar 20% met jaarlijkse betaling
        </p>
        <Button variant="ghost" href="/contact">
          Vragen over Enterprise? Neem contact op
        </Button>
      </div>
    </div>
  </section>

  <!-- Add-ons Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('pricing.addons.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('pricing.addons.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {addons.map((addon) => (
          <Card variant="default" padding="lg" class="flex items-start gap-4">
            <div class="flex-grow">
              <h3 class="text-lg font-semibold text-neutral-900 mb-2">{addon.name}</h3>
              <p class="text-sm text-neutral-600 mb-3">{addon.description}</p>
              <p class="text-primary font-semibold">{addon.price}</p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- ROI Calculator Teaser -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="bg-gradient-to-r from-primary to-primary-accent rounded-2xl p-8 lg:p-12 text-white">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <h2 class="text-3xl lg:text-4xl font-display font-bold mb-4">
              {t('pricing_page.roi_title', locale)}
            </h2>
            <p class="text-lg text-white/90 mb-6">
              Ontdek hoeveel tijd en geld je bespaart met Tesoro CRM. Gemiddeld verdienen onze klanten hun investering binnen 2 maanden terug.
            </p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-center gap-2">
                <span class="text-secondary text-xl">✓</span>
                <span>3.2x meer captaties per maand</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-secondary text-xl">✓</span>
                <span>67% tijdsbesparing op administratie</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-secondary text-xl">✓</span>
                <span>€12K extra omzet gemiddeld</span>
              </li>
            </ul>
            <Button variant="secondary" size="lg" href="/roi-calculator">
              {t('pricing_page.roi_cta', locale)}
            </Button>
          </div>
          <div class="hidden lg:block">
            <Card variant="elevated" class="bg-white/10 backdrop-blur-sm border-white/20 p-8">
              <div class="text-center">
                <div class="text-6xl mb-4">📈</div>
                <div class="text-4xl font-display font-bold text-secondary mb-2">€12,450</div>
                <p class="text-white/80">Gemiddelde extra omzet per maand</p>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('pricing.faq.title', locale)}
        </h2>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card variant="default" padding="lg">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">{faq.question}</h3>
            <p class="text-neutral-600">{faq.answer}</p>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-4">{t('pricing_page.more_questions', locale)}</p>
        <Button variant="outline" href="/contact">
          {t('cta.contact', locale)}
        </Button>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="bg-gradient-to-r from-primary to-primary-accent text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('pricing.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('pricing.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="/signup">
          {t('pricing.cta.cta_primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href="/demo" class="border-2 border-white hover:bg-white hover:text-primary">
          {t('pricing.cta.cta_secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
