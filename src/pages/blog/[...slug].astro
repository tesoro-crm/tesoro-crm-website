---
import Layout from '../../layouts/Layout.astro';
import RelatedPosts from '../../components/blog/RelatedPosts.astro';
import SectionRenderer from '../../components/blog/SectionRenderer.astro';
import ImageWithFallback from '../../components/blog/ImageWithFallback.astro';
import { getCollection } from 'astro:content';
import { getLocale } from '../../i18n/utils';
import type { Language } from '../../types/blog';
import { formatDate, getSectionTitle, generateStructuredData, generateFAQStructuredData, getCanonicalUrl } from '../../utils/blogHelpers';
import { getAuthor } from '../../utils/authors';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Filter out drafts and create paths
  const paths = posts
    .filter(post => !post.data.meta.draft)
    .map(post => ({
      params: { slug: post.data.meta.id },
      props: { post },
    }));

  return paths;
}

const { post } = Astro.props;
const blogData = post.data;
const locale: Language = (getLocale(Astro.currentLocale, Astro.url) as Language) || 'nl';

// Get localized content
const title = blogData.hero.title[locale];
const description = blogData.hero.description[locale];
const heroImage = blogData.hero.image;
const authorId = (blogData.meta as any).authorId || (blogData.meta as any).author?.id || 'maria-perez';
const author = getAuthor(authorId);
if (!author) {
  throw new Error(`Author not found: ${authorId}`);
}
// Get publishDate from meta (new location) or hero (legacy fallback)
const publishDateString = (blogData.meta as any).publishDate || (blogData.hero as any).publishDate;
const publishDate = formatDate(publishDateString, locale);

// Generate TOC from sections
const tocItems = blogData.sections
  .filter(section => section.title || section.type === 'introduction')
  .map(section => ({
    id: section.id,
    title: getSectionTitle(section, locale)
  }));

// Generate canonical URL
const canonicalUrl = getCanonicalUrl(blogData.meta.id, Astro.url.origin);

// Generate structured data
const structuredData = generateStructuredData(blogData, locale, canonicalUrl);
const faqStructuredData = generateFAQStructuredData(blogData, locale);
