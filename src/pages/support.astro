---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);

const faqs = [
  {
    question: t('support.faq.question_1', locale),
    answer: t('support.faq.answer_1', locale),
  },
  {
    question: t('support.faq.question_2', locale),
    answer: t('support.faq.answer_2', locale),
  },
  {
    question: t('support.faq.question_3', locale),
    answer: t('support.faq.answer_3', locale),
  },
  {
    question: t('support.faq.question_4', locale),
    answer: t('support.faq.answer_4', locale),
  },
  {
    question: t('support.faq.question_5', locale),
    answer: t('support.faq.answer_5', locale),
  },
  {
    question: t('support.faq.question_6', locale),
    answer: t('support.faq.answer_6', locale),
  },
];
---

<Layout
  title={t('support.meta_title', locale)}
  description={t('support.meta_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <Badge variant="primary" size="md" class="mb-6">
        {t('support.hero.badge', locale)}
      </Badge>

      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
        {t('support.hero.title', locale)}
      </h1>

      <p class="text-lg sm:text-xl text-neutral-700 mb-8 max-w-3xl mx-auto">
        {t('support.hero.description', locale)}
      </p>
    </div>
  </section>

  <!-- Support Resources -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg">
          <span class="icon icon-lg text-primary mb-4">library_books</span>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('support.resources.knowledge_base_title', locale)}
          </h3>
          <p class="text-neutral-700 mb-4">
            {t('support.resources.knowledge_base_description', locale)}
          </p>
          <Button variant="outline" size="sm" href={getLocalizedPath('/knowledge-base', locale)}>
            {t('support.resources.knowledge_base_cta', locale)}
          </Button>
        </Card>

        <Card variant="default" padding="lg">
          <span class="icon icon-lg text-primary mb-4">mail</span>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('support.resources.email_title', locale)}
          </h3>
          <p class="text-neutral-700 mb-4">
            {t('support.resources.email_description', locale)}
          </p>
          <a href="mailto:support@tesoro.estate" class="text-primary hover:text-primary-accent font-medium inline-flex items-center gap-1">
            support@tesoro.estate
            <span class="icon icon-sm">arrow_forward</span>
          </a>
        </Card>

        <Card variant="default" padding="lg">
          <span class="icon icon-lg text-primary mb-4">chat</span>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('support.resources.chat_title', locale)}
          </h3>
          <p class="text-neutral-700 mb-4">
            {t('support.resources.chat_description', locale)}
          </p>
          <Button variant="outline" size="sm" href={getLocalizedPath('/contact', locale)}>
            {t('support.resources.chat_cta', locale)}
          </Button>
        </Card>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('support.faq.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700">
          {t('support.faq.description', locale)}
        </p>
      </div>

      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card variant="default" padding="lg">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">{faq.question}</h3>
            <p class="text-neutral-700">{faq.answer}</p>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-700 mb-4">{t('support.faq.more_questions', locale)}</p>
        <Button variant="primary" href={getLocalizedPath('/contact', locale)}>
          {t('support.faq.contact_cta', locale)}
        </Button>
      </div>
    </div>
  </section>

  <!-- Premium Support -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
      <Card variant="bordered" padding="lg" class="ring-2 ring-primary">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <div>
            <Badge variant="primary" size="sm" class="mb-4">
              {t('support.premium.badge', locale)}
            </Badge>
            <h2 class="text-3xl font-display font-bold text-neutral-900 mb-4">
              {t('support.premium.title', locale)}
            </h2>
            <p class="text-lg text-neutral-700 mb-6">
              {t('support.premium.description', locale)}
            </p>
            <ul class="space-y-3 mb-8">
              <li class="flex items-start gap-2">
                <span class="icon icon-sm text-success flex-shrink-0">check_circle</span>
                <span class="text-neutral-700">{t('support.premium.feature_1', locale)}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="icon icon-sm text-success flex-shrink-0">check_circle</span>
                <span class="text-neutral-700">{t('support.premium.feature_2', locale)}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="icon icon-sm text-success flex-shrink-0">check_circle</span>
                <span class="text-neutral-700">{t('support.premium.feature_3', locale)}</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="icon icon-sm text-success flex-shrink-0">check_circle</span>
                <span class="text-neutral-700">{t('support.premium.feature_4', locale)}</span>
              </li>
            </ul>
          </div>
          <div>
            <Card variant="elevated" class="bg-primary/5 p-8">
              <div class="text-center">
                <div class="text-4xl font-display font-bold text-primary mb-2">
                  {t('support.premium.price', locale)}
                </div>
                <p class="text-neutral-700 mb-6">{t('support.premium.price_period', locale)}</p>
                <Button variant="primary" size="lg" fullWidth href={getLocalizedPath('/contact', locale)}>
                  {t('support.premium.cta', locale)}
                </Button>
              </div>
            </Card>
          </div>
        </div>
      </Card>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-primary-accent text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('support.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('support.cta.description', locale)}
      </p>
      <Button variant="secondary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
        {t('support.cta.cta_primary', locale)}
      </Button>
    </div>
  </section>
</Layout>
