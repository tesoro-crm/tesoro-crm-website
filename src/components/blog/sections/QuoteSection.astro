---
import type { QuoteSection, Language } from '../../../types/blog';

interface Props {
  section: QuoteSection;
  lang: Language;
}

const { section, lang } = Astro.props;
const quote = section.quote[lang];
const role = section.role[lang];
---

<section class="blog-section blog-section--quote" id={section.id}>
  <blockquote class="quote-block">
    <div class="quote-block__content">
      <p class="quote-block__text">{quote}</p>
    </div>
    <footer class="quote-block__footer">
      {section.image && (
        <img 
          src={section.image} 
          alt={section.author}
          class="quote-block__avatar"
          width="56"
          height="56"
          loading="lazy"
        />
      )}
      <div class="quote-block__author">
        <cite class="quote-block__name">{section.author}</cite>
        <div class="quote-block__role">{role}</div>
      </div>
    </footer>
  </blockquote>
</section>

<style>
  .blog-section--quote {
    margin: 3rem 0;
  }

  .quote-block {
    background: #f8fafc;
    border-left: 4px solid #0f172a;
    padding: 2rem 2.5rem;
    border-radius: 0 8px 8px 0;
    margin: 0;
  }

  .quote-block__content {
    margin-bottom: 1.5rem;
  }

  .quote-block__text {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #1e293b;
    font-style: italic;
    margin: 0;
  }

  .quote-block__text::before {
    content: '"';
    font-size: 2rem;
    color: #0f172a;
    opacity: 0.3;
    margin-right: 0.25rem;
  }

  .quote-block__text::after {
    content: '"';
    font-size: 2rem;
    color: #0f172a;
    opacity: 0.3;
    margin-left: 0.25rem;
  }

  .quote-block__footer {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .quote-block__avatar {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .quote-block__author {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .quote-block__name {
    font-size: 1rem;
    font-weight: 600;
    color: #0f172a;
    font-style: normal;
  }

  .quote-block__role {
    font-size: 0.875rem;
    color: #64748b;
  }

  @media (max-width: 640px) {
    .quote-block {
      padding: 1.5rem 1.75rem;
    }

    .quote-block__text {
      font-size: 1.125rem;
    }
  }
</style>
