<style>
  .last-activity {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 20px 40px rgba(10, 31, 68, 0.12);
    border: 1px solid rgba(10, 31, 68, 0.08);
    animation: fadeIn 0.6s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pipeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f0f0f0;
  }

  .header-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: #0a1f44;
    font-size: 1.125rem;
  }

  .header-title .icon {
    font-size: 1.5rem;
    color: #003366;
  }

  .sort-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: #f3f4f6;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    color: #4b5563;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sort-toggle:hover {
    background: #e5e7eb;
  }

  .sort-toggle .icon {
    font-size: 1rem;
  }

  .pipeline-stages {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .stage {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .stage-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
    border-radius: 0.5rem;
  }

  .stage-name {
    font-weight: 600;
    color: #0a1f44;
    font-size: 0.875rem;
  }

  .stage-count {
    background: #003366;
    color: white;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .stage-cards {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .deal-card {
    padding: 1rem;
    background: #fafafa;
    border-radius: 0.75rem;
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
    animation: slideIn 0.5s ease-out backwards;
  }

  .deal-card:nth-child(1) { animation-delay: 0.1s; }
  .deal-card:nth-child(2) { animation-delay: 0.2s; }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .deal-card.stale {
    border-color: #fca5a5;
    background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
    animation: shake 0.5s ease-out 0.3s;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25% { transform: translateX(-5px); }
    75% { transform: translateX(5px); }
  }

  .deal-card.attention {
    border-color: #fcd34d;
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  }

  .deal-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(10, 31, 68, 0.1);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  .client-name {
    font-weight: 600;
    color: #0a1f44;
    font-size: 0.875rem;
  }

  .activity-badge {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.75rem;
    font-weight: 600;
  }

  .activity-badge.critical {
    background: linear-gradient(135deg, #fca5a5, #f87171);
    color: #7f1d1d;
    animation: pulse 2s infinite;
  }

  .activity-badge.warning {
    background: linear-gradient(135deg, #fcd34d, #fbbf24);
    color: #78350f;
  }

  .activity-badge.recent {
    background: linear-gradient(135deg, #93c5fd, #60a5fa);
    color: #1e3a8a;
  }

  .activity-badge.active {
    background: linear-gradient(135deg, #86efac, #4ade80);
    color: #14532d;
  }

  .activity-badge .icon {
    font-size: 0.875rem;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .card-detail {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: #6b7280;
  }

  .card-detail .icon {
    font-size: 0.875rem;
  }

  .warning-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: linear-gradient(135deg, #fecaca, #fca5a5);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #991b1b;
    animation: pulse 2s infinite;
  }

  .warning-bar .icon {
    font-size: 1rem;
  }

  .activity-note {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: linear-gradient(135deg, #dbeafe, #bfdbfe);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    color: #1e40af;
  }

  .activity-note.success {
    background: linear-gradient(135deg, #d1fae5, #a7f3d0);
    color: #065f46;
  }

  .activity-note .icon {
    font-size: 0.875rem;
  }

  .insights-banner {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    border-radius: 0.75rem;
    border: 1px solid #fbbf24;
    color: #78350f;
    font-size: 0.875rem;
    animation: fadeIn 0.8s ease-out 0.4s backwards;
  }

  .insights-banner .icon {
    font-size: 1.25rem;
    color: #f59e0b;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .last-activity {
      padding: 1rem;
    }

    .pipeline-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .pipeline-stages {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .deal-card {
      padding: 0.75rem;
    }

    .insights-banner {
      font-size: 0.75rem;
      padding: 0.75rem;
    }
  }
</style>
