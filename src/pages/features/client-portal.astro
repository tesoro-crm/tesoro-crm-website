---
import Layout from '../../layouts/Layout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import { getLocale, loadTranslations, t, getLocalizedPath } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);
---

<Layout
  title={t('feature_pages.client_portal.meta_title', locale)}
  description={t('feature_pages.client_portal.meta_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center max-w-4xl mx-auto">
        <Badge variant="primary" size="md" class="mb-6">
          {t('feature_pages.client_portal.hero.badge', locale)}
        </Badge>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
          {t('feature_pages.client_portal.hero.title', locale)}
        </h1>

        <p class="text-lg sm:text-xl text-neutral-700 mb-8">
          {t('feature_pages.client_portal.hero.description', locale)}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <Button variant="primary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
            {t('feature_pages.client_portal.hero.cta_primary', locale)}
          </Button>
          <Button variant="outline" size="lg" href={getLocalizedPath('/demo', locale)}>
            {t('feature_pages.client_portal.hero.cta_secondary', locale)}
          </Button>
        </div>

        <div class="grid grid-cols-3 gap-8 max-w-3xl mx-auto">
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">
              {t('feature_pages.client_portal.benefits.houses_tracked', locale)}
            </div>
            <div class="text-sm text-neutral-600">
              {t('feature_pages.client_portal.benefits.houses_tracked_desc', locale)}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">
              {t('feature_pages.client_portal.benefits.loyalty', locale)}
            </div>
            <div class="text-sm text-neutral-600">
              {t('feature_pages.client_portal.benefits.loyalty_desc', locale)}
            </div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-primary mb-2">
              {t('feature_pages.client_portal.benefits.overview', locale)}
            </div>
            <div class="text-sm text-neutral-600">
              {t('feature_pages.client_portal.benefits.overview_desc', locale)}
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Problem Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.problem.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
          {t('feature_pages.client_portal.problem.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg" class="border-2 border-danger/20 bg-danger/5">
          <div class="w-12 h-12 bg-danger/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-danger">close</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.problem.pain_1_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.problem.pain_1_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-warning/20 bg-warning/5">
          <div class="w-12 h-12 bg-warning/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-warning">warning</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.problem.pain_2_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.problem.pain_2_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-neutral-300 bg-neutral-50">
          <div class="w-12 h-12 bg-neutral-200 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-neutral-600">block</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.problem.pain_3_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.problem.pain_3_description', locale)}
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-primary/5 to-secondary/5">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.solution.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
          {t('feature_pages.client_portal.solution.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg" class="border-2 border-success/30 bg-white">
          <div class="w-12 h-12 bg-success/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-success">check_circle</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.solution.benefit_1_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.solution.benefit_1_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-primary/30 bg-white">
          <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-primary">photo_camera</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.solution.benefit_2_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.solution.benefit_2_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-secondary/30 bg-white">
          <div class="w-12 h-12 bg-secondary/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-secondary">star</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.solution.benefit_3_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.solution.benefit_3_description', locale)}
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Client Perspective Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.client_perspective.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto">
          {t('feature_pages.client_portal.client_perspective.description', locale)}
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <Card variant="default" padding="lg">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.client_perspective.feature_1_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.client_perspective.feature_1_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.client_perspective.feature_2_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.client_perspective.feature_2_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.client_perspective.feature_3_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.client_perspective.feature_3_description', locale)}
          </p>
        </Card>
      </div>

      <Card variant="default" padding="lg" class="max-w-3xl mx-auto bg-gradient-to-br from-neutral-50 to-white border-2 border-primary/20">
        <div class="text-center">
          <p class="text-xl italic text-neutral-700 mb-4">
            "{t('feature_pages.client_portal.client_perspective.quote', locale)}"
          </p>
          <p class="text-sm text-neutral-600">
            - {t('feature_pages.client_portal.client_perspective.quote_author', locale)}
          </p>
        </div>
      </Card>
    </div>
  </section>

  <!-- Loyalty Section -->
  <section class="py-16 lg:py-24 bg-gradient-to-br from-secondary/10 to-primary/10">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.loyalty.title', locale)}
        </h2>
        <p class="text-lg text-neutral-700 max-w-3xl mx-auto mb-8">
          {t('feature_pages.client_portal.loyalty.description', locale)}
        </p>
        <div class="inline-block px-6 py-3 bg-success/10 rounded-full border-2 border-success/30">
          <span class="text-2xl font-bold text-success">
            {t('feature_pages.client_portal.loyalty.stat', locale)}
          </span>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg" class="bg-white">
          <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-primary">lock</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.loyalty.reason_1_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.loyalty.reason_1_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="bg-white">
          <div class="w-12 h-12 bg-success/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-success">folder</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.loyalty.reason_2_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.loyalty.reason_2_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="bg-white">
          <div class="w-12 h-12 bg-secondary/10 rounded-full flex items-center justify-center mb-4">
            <span class="icon icon-lg text-secondary">construction</span>
          </div>
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.loyalty.reason_3_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.loyalty.reason_3_description', locale)}
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Makelaar Benefits Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.makelaar_benefits.title', locale)}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <Card variant="default" padding="lg" class="border-2 border-primary/20">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_1_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_1_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-success/20">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_2_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_2_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-secondary/20">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_3_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_3_description', locale)}
          </p>
        </Card>

        <Card variant="default" padding="lg" class="border-2 border-primary/20">
          <h3 class="text-xl font-semibold text-neutral-900 mb-3">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_4_title', locale)}
          </h3>
          <p class="text-neutral-700">
            {t('feature_pages.client_portal.makelaar_benefits.benefit_4_description', locale)}
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- Workflow Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.workflow.title', locale)}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {[1, 2, 3, 4, 5, 6].map((step) => (
          <div class="relative">
            <Card variant="default" padding="lg" class="h-full bg-white">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-bold flex-shrink-0">
                  {step}
                </div>
                <h3 class="text-lg font-semibold text-neutral-900">
                  {t(`feature_pages.client_portal.workflow.step_${step}_title`, locale)}
                </h3>
              </div>
              <p class="text-neutral-700">
                {t(`feature_pages.client_portal.workflow.step_${step}_description`, locale)}
              </p>
            </Card>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Grid Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('feature_pages.client_portal.features_grid.title', locale)}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {[1, 2, 3, 4, 5, 6, 7, 8].map((feature) => (
          <Card variant="default" padding="md" class="text-center">
            <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-3">
              <div class="w-6 h-6 bg-primary rounded-full"></div>
            </div>
            <h3 class="text-sm font-semibold text-neutral-900 mb-2">
              {t(`feature_pages.client_portal.features_grid.feature_${feature}_title`, locale)}
            </h3>
            <p class="text-xs text-neutral-600">
              {t(`feature_pages.client_portal.features_grid.feature_${feature}_description`, locale)}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('feature_pages.client_portal.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('feature_pages.client_portal.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
          {t('feature_pages.client_portal.cta.cta_primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href={getLocalizedPath('/demo', locale)} class="border-2 border-white hover:bg-white hover:text-primary">
          {t('feature_pages.client_portal.cta.cta_secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
