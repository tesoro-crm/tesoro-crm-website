---
import LeadWorkflowVisual from './LeadWorkflowVisual.astro';
import { t } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

interface Props {
  locale: Language;
}

const { locale } = Astro.props;

const title = t('home.lead_workflow.title', locale);
const subtitle = t('home.lead_workflow.subtitle', locale);
const bullets = [
  t('home.lead_workflow.bullet_1', locale),
  t('home.lead_workflow.bullet_2', locale),
  t('home.lead_workflow.bullet_3', locale),
  t('home.lead_workflow.bullet_4', locale),
];
const ctaLabel = t('home.lead_workflow.cta', locale);
const step1Title = t('home.lead_workflow.step1_title', locale);
const step1Text = t('home.lead_workflow.step1_text', locale);
const step2Title = t('home.lead_workflow.step2_title', locale);
const step2Text = t('home.lead_workflow.step2_text', locale);
const step3Title = t('home.lead_workflow.step3_title', locale);
const step3Text = t('home.lead_workflow.step3_text', locale);
const step4Title = t('home.lead_workflow.step4_title', locale);
const step4Text = t('home.lead_workflow.step4_text', locale);
const inboxLabel = t('home.lead_workflow.inbox_label', locale);
const newBadge = t('home.lead_workflow.new_badge', locale);
const emailSubject = t('home.lead_workflow.email_subject', locale);
const leadName = t('home.lead_workflow.lead_name', locale);
const emailSource = t('home.lead_workflow.email_source', locale);
const emailInterest = t('home.lead_workflow.email_interest', locale);
const emailBudget = t('home.lead_workflow.email_budget', locale);
const emailCta = t('home.lead_workflow.email_cta', locale);
const callStatus = t('home.lead_workflow.call_status', locale);
const callButton = t('home.lead_workflow.call_button', locale);
const callRecording = t('home.lead_workflow.call_recording', locale);
const templateHeader = t('home.lead_workflow.template_header', locale);
const templatePlaceholder = t('home.lead_workflow.template_placeholder', locale);
const templateOption1 = t('home.lead_workflow.template_option1', locale);
const templateOption2 = t('home.lead_workflow.template_option2', locale);
const templateOption3 = t('home.lead_workflow.template_option3', locale);
const templateSend = t('home.lead_workflow.template_send', locale);
const historyHeader = t('home.lead_workflow.history_header', locale);
const historyEmail = t('home.lead_workflow.history_email', locale);
const historyCall = t('home.lead_workflow.history_call', locale);
const historyReceived = t('home.lead_workflow.history_received', locale);
const timeNow = t('home.lead_workflow.time_now', locale);
const timeToday = t('home.lead_workflow.time_today', locale);
---
<section class="lead-workflow">
  <div class="lead-workflow__container">
    <div class="lead-workflow__header">
      <h2 class="lead-workflow__title">{title}</h2>
      <p class="lead-workflow__subtitle">{subtitle}</p>
    </div>

    <LeadWorkflowVisual
      step1Title={step1Title}
      step1Text={step1Text}
      step2Title={step2Title}
      step2Text={step2Text}
      step3Title={step3Title}
      step3Text={step3Text}
      step4Title={step4Title}
      step4Text={step4Text}
      inboxLabel={inboxLabel}
      newBadge={newBadge}
      emailSubject={emailSubject}
      leadName={leadName}
      emailSource={emailSource}
      emailInterest={emailInterest}
      emailBudget={emailBudget}
      emailCta={emailCta}
      callStatus={callStatus}
      callButton={callButton}
      callRecording={callRecording}
      templateHeader={templateHeader}
      templatePlaceholder={templatePlaceholder}
      templateOption1={templateOption1}
      templateOption2={templateOption2}
      templateOption3={templateOption3}
      templateSend={templateSend}
      historyHeader={historyHeader}
      historyEmail={historyEmail}
      historyCall={historyCall}
      historyReceived={historyReceived}
      timeNow={timeNow}
      timeToday={timeToday}
    />

    <div class="lead-workflow__benefits">
      <ul class="lead-workflow__list">
        {bullets.map((b: string) => (
          <li class="lead-workflow__item">
            <span class="icon lead-workflow__icon">check</span>
            <span>{b}</span>
          </li>
        ))}
      </ul>
    </div>

    <div class="lead-workflow__cta-wrapper">
      <button class="lead-workflow__cta" data-video-modal-target="video-modal">{ctaLabel}</button>
    </div>
  </div>
</section>

<style>
  .lead-workflow {
    padding: 4rem 0;
    background: #ffffff;
  }

  .lead-workflow__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .lead-workflow__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .lead-workflow__title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: #0a1f44;
    margin-bottom: 1rem;
  }

  .lead-workflow__subtitle {
    font-size: 1.1rem;
    color: rgba(10, 31, 68, 0.7);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .lead-workflow__benefits {
    margin: 3rem 0;
  }

  .lead-workflow__list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    max-width: 900px;
    margin: 0 auto;
    padding: 0;
    list-style: none;
  }

  @media (min-width: 768px) {
    .lead-workflow__list {
      grid-template-columns: 1fr 1fr;
    }
  }

  .lead-workflow__item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #ffffff 0%, #faf9f7 100%);
    border-radius: 1rem;
    box-shadow: 0 4px 12px rgba(10, 31, 68, 0.06);
    border: 1px solid rgba(255, 159, 67, 0.1);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .lead-workflow__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    background: linear-gradient(135deg, #10b981, #059669);
    color: white;
    border-radius: 50%;
    font-weight: 700;
    font-size: 0.875rem;
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(16, 185, 129, 0.3);
    transition: all 0.3s ease;
  }

  .lead-workflow__item::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(255, 159, 67, 0.05), rgba(255, 107, 157, 0.05));
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .lead-workflow__item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(10, 31, 68, 0.12);
    border-color: rgba(255, 159, 67, 0.3);
  }

  .lead-workflow__item:hover .lead-workflow__icon {
    transform: scale(1.1) rotate(10deg);
    box-shadow: 0 6px 16px rgba(16, 185, 129, 0.4);
  }

  .lead-workflow__item:hover::after {
    opacity: 1;
  }

  .lead-workflow__cta-wrapper {
    text-align: center;
    margin-top: 3rem;
  }

  .lead-workflow__cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: var(--accent-primary);
    color: white;
    text-decoration: none;
    border: none;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1rem;
    cursor: pointer;
    box-shadow: 0 10px 20px rgba(245, 158, 11, 0.25);
    transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
  }

  .lead-workflow__cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 30px rgba(245, 158, 11, 0.35);
    background: var(--accent-secondary);
  }

  /* Mobile improvements */
  @media (max-width: 767px) {
    .lead-workflow {
      padding: 3rem 0;
    }

    .lead-workflow__header {
      margin-bottom: 2rem;
    }

    .lead-workflow__title {
      font-size: clamp(1.5rem, 5vw, 2rem);
      margin-bottom: 0.75rem;
    }

    .lead-workflow__subtitle {
      font-size: 1rem;
      line-height: 1.6;
    }

    .lead-workflow__benefits {
      margin: 2rem 0;
    }

    .lead-workflow__item {
      padding: 1.25rem;
    }

    /* Disable hover animations on mobile */
    .lead-workflow__item:hover {
      transform: none;
      box-shadow: 0 4px 12px rgba(10, 31, 68, 0.06);
    }

    .lead-workflow__item:hover .lead-workflow__icon {
      transform: none;
    }

    .lead-workflow__cta {
      width: 100%;
      padding: 1.125rem 2rem;
      font-size: 1rem;
    }

    .lead-workflow__cta-wrapper {
      margin-top: 2rem;
    }
  }
</style>
