---
import Layout from '../layouts/Layout.astro';
import ColorPalette from '../components/design-system/ColorPalette.astro';
---

<Layout
  title="Tesoro CRM - Design System"
  description="Complete brand guidelines, color palette, and design system documentation for Tesoro CRM"
>
  <div class="design-system">
    <header class="design-system__hero">
      <div class="design-system__container">
        <h1 class="design-system__title">
          Tesoro Design System
        </h1>
        <p class="design-system__description">
          Complete brand guidelines, interactive color palette, and design system documentation for consistent user experiences across all Tesoro CRM touchpoints.
        </p>
        
        <div class="design-system__stats">
          <div class="design-system__stat">
            <span class="design-system__stat-number">14</span>
            <span class="design-system__stat-label">Brand Colors</span>
          </div>
          <div class="design-system__stat">
            <span class="design-system__stat-number">8</span>
            <span class="design-system__stat-label">Category Types</span>
          </div>
          <div class="design-system__stat">
            <span class="design-system__stat-number">7</span>
            <span class="design-system__stat-label">Callout Variants</span>
          </div>
          <div class="design-system__stat">
            <span class="design-system__stat-number">WCAG AA</span>
            <span class="design-system__stat-label">Accessibility</span>
          </div>
        </div>
      </div>
    </header>

    <!-- Interactive Color Palette -->
    <section class="design-system__section">
      <ColorPalette />
    </section>

    <!-- Quick Reference -->
    <section class="design-system__section design-system__section--gray">
      <div class="design-system__container">
        <h2 class="design-system__section-title">Quick Reference</h2>
        
        <div class="design-system__reference-grid">
          <!-- CSS Variables -->
          <div class="design-system__reference-card">
            <h3>CSS Variables</h3>
            <div class="design-system__code-block">
              <pre><code>/* Primary Colors */
:root {
  --tesoro-orange: #ED6E19;
  --tesoro-blue-dark: #3B529F;
  --tesoro-pink: #E94A93;
  --tesoro-purple: #7C61A7;
  --tesoro-yellow: #FCC72C;
  --tesoro-red: #E84847;
}</code></pre>
            </div>
          </div>

          <!-- Category Mapping -->
          <div class="design-system__reference-card">
            <h3>Category Colors</h3>
            <div class="design-system__color-mapping">
              <div class="design-system__mapping-item">
                <div class="design-system__mapping-swatch" style="background: var(--tesoro-orange);"></div>
                <span>Case Study</span>
              </div>
              <div class="design-system__mapping-item">
                <div class="design-system__mapping-swatch" style="background: var(--tesoro-blue-dark);"></div>
                <span>CRM Tips</span>
              </div>
              <div class="design-system__mapping-item">
                <div class="design-system__mapping-swatch" style="background: var(--tesoro-pink);"></div>
                <span>Success Stories</span>
              </div>
              <div class="design-system__mapping-item">
                <div class="design-system__mapping-swatch" style="background: var(--tesoro-purple);"></div>
                <span>Real Estate</span>
              </div>
            </div>
          </div>

          <!-- Usage Guidelines -->
          <div class="design-system__reference-card">
            <h3>Usage Guidelines</h3>
            <ul class="design-system__guidelines">
              <li>Use orange family for primary actions and CTAs</li>
              <li>Blue family conveys trust and professionalism</li>
              <li>Pink/red family for attention and success</li>
              <li>Always maintain WCAG AA contrast ratios</li>
              <li>Test color combinations for accessibility</li>
              <li>Use consistent color mapping across components</li>
            </ul>
          </div>

          <!-- Resources -->
          <div class="design-system__reference-card">
            <h3>Resources</h3>
            <div class="design-system__resources">
              <a href="/docs/design-system/tesoro-brand-style-guide.md" class="design-system__resource-link">
                üìÑ Complete Style Guide
              </a>
              <a href="#color-palette" class="design-system__resource-link">
                üé® Interactive Palette
              </a>
              <a href="/blog" class="design-system__resource-link">
                üìù See Colors in Action
              </a>
              <button class="design-system__resource-link" onclick="copyAllColors()">
                üìã Copy All CSS Variables
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Implementation Examples -->
    <section class="design-system__section">
      <div class="design-system__container">
        <h2 class="design-system__section-title">Implementation Examples</h2>
        
        <div class="design-system__examples">
          <!-- Button Examples -->
          <div class="design-system__example">
            <h3>Buttons</h3>
            <div class="design-system__button-showcase">
              <button class="btn btn--primary">Primary CTA</button>
              <button class="btn btn--secondary">Secondary Action</button>
              <button class="btn btn--success">Success State</button>
              <button class="btn btn--warning">Warning</button>
            </div>
          </div>

          <!-- Card Examples -->
          <div class="design-system__example">
            <h3>Category Cards</h3>
            <div class="design-system__card-showcase">
              <div class="design-system__demo-card">
                <span class="design-system__demo-category" style="background: var(--tesoro-orange); color: white;">
                  CASE STUDY
                </span>
                <h4>Real Estate Transformation</h4>
                <p>How a Javea agent transformed their business...</p>
              </div>
              <div class="design-system__demo-card">
                <span class="design-system__demo-category" style="background: var(--tesoro-blue-dark); color: white;">
                  CRM TIPS
                </span>
                <h4>Lead Management Best Practices</h4>
                <p>Essential strategies for converting leads...</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<script>
  function copyAllColors() {
    const cssVariables = `/* Tesoro Brand Colors - Complete Palette */

/* Warm Colors (Energy & Action) */
--tesoro-yellow: #FCC72C;
--tesoro-orange-light: #F8B131;
--tesoro-coral: #EE7461;
--tesoro-orange: #ED6E19;
--tesoro-orange-dark: #F18407;
--tesoro-red: #E84847;

/* Cool Colors (Trust & Stability) */
--tesoro-pink: #E94A93;
--tesoro-pink-dark: #CF1D5B;
--tesoro-burgundy: #B6154A;
--tesoro-red-bright: #E2071E;
--tesoro-pink-light: #EE8BB6;
--tesoro-purple-light: #8C6DAC;

/* Blue Family (Professional) */
--tesoro-purple: #7C61A7;
--tesoro-blue-dark: #3B529F;
--tesoro-blue-navy: #36398D;
--tesoro-blue-light: #57AEE3;`;

    navigator.clipboard.writeText(cssVariables).then(() => {
      alert('All CSS color variables copied to clipboard!');
    }).catch(err => {
      console.error('Failed to copy: ', err);
    });
  }
</script>

<style>
  .design-system {
    min-height: 100vh;
  }

  .design-system__hero {
    background: linear-gradient(135deg, var(--tesoro-orange) 0%, var(--tesoro-pink) 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }

  .design-system__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .design-system__title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  .design-system__description {
    font-size: 1.25rem;
    max-width: 800px;
    margin: 0 auto 3rem;
    opacity: 0.95;
    line-height: 1.6;
  }

  .design-system__stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .design-system__stat {
    text-align: center;
  }

  .design-system__stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
  }

  .design-system__stat-label {
    font-size: 0.875rem;
    opacity: 0.9;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .design-system__section {
    padding: 4rem 0;
  }

  .design-system__section--gray {
    background: #f9fafb;
  }

  .design-system__section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--text-primary);
  }

  .design-system__reference-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .design-system__reference-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .design-system__reference-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    color: var(--tesoro-orange);
  }

  .design-system__code-block {
    background: #1e293b;
    color: #e2e8f0;
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
  }

  .design-system__code-block code {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .design-system__color-mapping {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .design-system__mapping-item {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .design-system__mapping-swatch {
    width: 24px;
    height: 24px;
    border-radius: 4px;
    flex-shrink: 0;
  }

  .design-system__guidelines {
    list-style: none;
    padding: 0;
  }

  .design-system__guidelines li {
    padding: 0.5rem 0;
    border-bottom: 1px solid #e5e7eb;
    position: relative;
    padding-left: 1.5rem;
  }

  .design-system__guidelines li:before {
    content: '‚úì';
    position: absolute;
    left: 0;
    color: var(--tesoro-orange);
    font-weight: bold;
  }

  .design-system__resources {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .design-system__resource-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--tesoro-blue-dark);
    text-decoration: none;
    padding: 0.75rem;
    border-radius: 8px;
    border: 1px solid transparent;
    transition: all 0.2s;
    background: none;
    cursor: pointer;
    font-family: inherit;
    font-size: inherit;
  }

  .design-system__resource-link:hover {
    background: #f0f9ff;
    border-color: var(--tesoro-blue-light);
  }

  /* Button Examples */
  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    margin: 0.5rem;
  }

  .btn--primary {
    background: var(--tesoro-orange);
    color: white;
  }

  .btn--primary:hover {
    background: var(--tesoro-orange-dark);
    transform: translateY(-1px);
  }

  .btn--secondary {
    background: var(--tesoro-blue-dark);
    color: white;
  }

  .btn--success {
    background: var(--accent-success);
    color: white;
  }

  .btn--warning {
    background: var(--tesoro-yellow);
    color: #92400e;
  }

  /* Card Examples */
  .design-system__card-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .design-system__demo-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .design-system__demo-category {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .design-system__demo-card h4 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .design-system__demo-card p {
    color: var(--text-muted);
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .design-system__title {
      font-size: 2.5rem;
    }

    .design-system__stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .design-system__reference-grid {
      grid-template-columns: 1fr;
    }

    .design-system__container {
      padding: 0 1rem;
    }
  }
</style>