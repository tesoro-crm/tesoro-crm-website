      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {useCases.map((useCase) => (
          <Card variant="default" padding="lg">
            <div class="flex items-start gap-4">
              <span class="icon icon-lg text-primary flex-shrink-0">{useCase.icon}</span>
              <div>
                <h3 class="text-lg font-semibold text-neutral-900 mb-2">{useCase.title}</h3>
                <p class="text-sm text-neutral-700">{useCase.description}</p>
