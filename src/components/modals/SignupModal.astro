---
import Modal from '../ui/Modal.astro';
import Button from '../ui/Button.astro';
import { t } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

export interface Props {
  locale: Language;
}

const { locale } = Astro.props;
---

<Modal id="signup-modal" title={t('home.modals.signup.title', locale)} size="md">
  <div class="text-center space-y-6">
    <div>
      <h3 class="text-xl font-semibold text-neutral-900 mb-2">
        {t('home.modals.signup.heading', locale)}
      </h3>
      <p class="text-neutral-600">
        {t('home.modals.signup.description', locale)}
      </p>
    </div>

    <div class="flex flex-col sm:flex-row gap-3 justify-center">
      <Button variant="primary" size="lg" href="https://crm.tesoro.estate/auth/signup" target="_blank" rel="noopener noreferrer">
        {t('home.modals.signup.cta', locale)}
      </Button>
      <Button variant="outline" size="lg" data-modal-close>
        {t('home.modals.signup.cancel', locale)}
      </Button>
    </div>

    <div class="text-sm text-neutral-500">
      {t('home.modals.signup.security', locale)}
    </div>
  </div>
</Modal>
