---
import Modal from '../ui/Modal.astro';
import Button from '../ui/Button.astro';
import { t } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

export interface Props {
  locale: Language;
}

const { locale } = Astro.props;
---

<Modal id="success-modal" title={t('home.modals.success.title', locale)} size="md">
  <div class="text-center py-6">
    <div class="mb-6">
      <div class="mx-auto w-16 h-16 bg-success/10 rounded-full flex items-center justify-center mb-4">
        <svg class="w-8 h-8 text-success" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-neutral-900 mb-2">{t('home.modals.success.heading', locale)}</h3>
      <p class="text-neutral-600 mb-4">{t('home.modals.success.message', locale)}</p>
      <p class="text-sm text-neutral-500">{t('home.modals.success.email_confirmation', locale)}</p>
    </div>
    <Button data-modal-close variant="primary">{t('home.modals.success.close', locale)}</Button>
  </div>
</Modal>
