  },
  {
    type: 'Misschien',
    description: 'Klant heeft twijfels maar wil de property niet helemaal afschrijven',
    color: 'text-warning',
    action: 'Deal ‚Üí Pending stage',
  },
  {
    type: 'Niet Interessant',
    description: 'Property past niet bij wat de klant zoekt',
    color: 'text-neutral-500',
    action: 'Deal ‚Üí Archief',
  },
];

const security = [
  {
    feature: 'Persoonlijke Login',
    description: 'Elke klant heeft unieke inloggegevens',
  },
  {
    feature: 'Data Isolatie',
    description: 'Klanten zien alleen hun eigen properties',
  },
  {
    feature: 'GDPR Compliant',
    description: 'Volledig conform Europese privacy wetgeving',
  },
  {
    feature: 'SSL Encryptie',
    description: 'Alle data wordt veilig verzonden',
  },
];
---

<Layout 
  title={t('feature_pages.customer_portal.meta_title', locale)}
  description={t('feature_pages.customer_portal.meta_description', locale)}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-neutral-50 to-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-6">
            {t('feature_pages.customer_portal.hero.badge', locale)}
          </Badge>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-6">
            {t('feature_pages.customer_portal.hero.title', locale)}
          </h1>
          
          <p class="text-lg sm:text-xl text-neutral-700 mb-8">
            {t('feature_pages.customer_portal.hero.description', locale)}
          </p>

          <div class="flex flex-col sm:flex-row gap-4 mb-8">
            <Button variant="primary" size="lg" href={getLocalizedPath('/signup', locale)}>
              {t('feature_pages.customer_portal.cta.primary', locale)}
            </Button>
            <Button variant="outline" size="lg" href={getLocalizedPath('/demo', locale)}>
              {t('feature_pages.customer_portal.cta.secondary', locale)}
            </Button>
          </div>

          <div class="grid grid-cols-3 gap-4">
            {benefits.map((benefit) => (
              <div class="text-center">
                <div class="text-2xl font-bold text-primary mb-1">{benefit.metric}</div>
                <div class="text-sm text-neutral-600">{benefit.description}</div>
              </div>
            ))}
          </div>
        </div>
        
        <div class="relative">
          <div class="bg-white rounded-2xl shadow-xl p-6">
            <div class="flex items-center justify-between mb-6">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center text-white font-semibold">
                  MJ
                </div>
                <div>
                  <div class="font-semibold text-neutral-900">Familie Jansen</div>
                  <div class="text-sm text-neutral-600">Jouw Properties</div>
                </div>
              </div>
              <Badge variant="success" size="sm">Online</Badge>
            </div>
            
            <div class="space-y-4">
              <div class="border border-success/20 bg-success/5 rounded-lg p-4">
                <div class="flex gap-4">
                  <div class="w-16 h-16 bg-gradient-to-br from-neutral-300 to-neutral-400 rounded-lg flex items-center justify-center text-2xl">
                    üè†
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-neutral-900">Villa Marbella</h3>
                    <p class="text-sm text-neutral-600">‚Ç¨450.000 ‚Ä¢ 4 kamers ‚Ä¢ 180m¬≤</p>
                    <p class="text-xs text-neutral-500 mt-1">Voorgesteld 2 dagen geleden</p>
                  </div>
                </div>
                
                <div class="flex gap-2 mt-4">
                  <button class="flex-1 bg-success text-white px-3 py-2 rounded-lg text-sm font-medium">
                    ‚úì Interessant
                  </button>
                  <button class="px-3 py-2 bg-neutral-100 text-neutral-600 rounded-lg text-sm">
                    Misschien
                  </button>
                  <button class="px-3 py-2 bg-neutral-100 text-neutral-600 rounded-lg text-sm">
                    Niet voor ons
                  </button>
                </div>
              </div>
              
              <div class="border rounded-lg p-4">
                <div class="flex gap-4">
                  <div class="w-16 h-16 bg-gradient-to-br from-neutral-300 to-neutral-400 rounded-lg flex items-center justify-center text-2xl">
                    üè°
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold text-neutral-900">Townhouse Centro</h3>
                    <p class="text-sm text-neutral-600">‚Ç¨380.000 ‚Ä¢ 3 kamers ‚Ä¢ 140m¬≤</p>
                    <p class="text-xs text-neutral-500 mt-1">Nieuw vandaag</p>
                  </div>
                </div>
                
                <div class="flex gap-2 mt-4">
                  <button class="flex-1 bg-neutral-100 hover:bg-success hover:text-white px-3 py-2 rounded-lg text-sm font-medium transition-colors">
                    Interessant
                  </button>
                  <button class="px-3 py-2 bg-neutral-100 text-neutral-600 rounded-lg text-sm">
                    Misschien
                  </button>
                  <button class="px-3 py-2 bg-neutral-100 text-neutral-600 rounded-lg text-sm">
                    Niet voor ons
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Portal Features -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          Krachtige Portaal Features
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          Geef je klanten de best mogelijke ervaring met een professioneel klantportaal.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {portalFeatures.map((feature) => (
          <Card variant="default" padding="lg" class="h-full">
            <h3 class="text-xl font-semibold text-neutral-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-neutral-700">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Feedback System -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          Eenvoudig Feedback System
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          Klanten kunnen met √©√©n klik aangeven wat ze van een property vinden.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {feedbackOptions.map((option) => (
          <Card variant="default" padding="lg" class="text-center">
            <h3 class={`text-xl font-semibold mb-3 ${option.color}`}>
              {option.type}
            </h3>
            <p class="text-neutral-700 mb-4">
              {option.description}
            </p>
            <Badge variant="outline" size="sm">
              {option.action}
            </Badge>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Workflow Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          Van Setup tot Feedback in 6 Stappen
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          Zo stel je het klantportaal in en krijg je feedback van je klanten.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {workflow.map((step, index) => (
          <div class="relative">
            <Card variant="default" padding="lg" class="h-full">
              <div class="flex items-center gap-4 mb-4">
                <div class="w-10 h-10 bg-primary rounded-full flex items-center justify-center text-white font-bold">
                  {step.step}
                </div>
              </div>
              <h3 class="text-lg font-semibold text-neutral-900 mb-3">
                {step.title}
              </h3>
              <p class="text-neutral-700">
                {step.description}
              </p>
            </Card>
            
            {index < workflow.length - 1 && index % 3 !== 2 && (
              <div class="hidden lg:block absolute top-1/2 -right-4 w-8 h-0.5 bg-primary/30 transform -translate-y-1/2"></div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Security Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            Veiligheid & Privacy
          </h2>
          
          <p class="text-lg text-neutral-700 mb-8">
            Het klantportaal is volledig beveiligd en GDPR-compliant. 
            Klanten zien alleen hun eigen properties en hun data is volledig beschermd.
          </p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            {security.map((item) => (
              <div>
                <h3 class="font-semibold text-neutral-900 mb-1">{item.feature}</h3>
                <p class="text-sm text-neutral-700">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-primary/5 to-secondary/5 rounded-2xl p-8">
          <h3 class="text-2xl font-bold text-neutral-900 mb-6">Klant Tevredenheid</h3>
          
          <div class="space-y-6">
            <div class="border-l-4 border-primary pl-4">
              <div class="text-2xl font-bold text-primary">89%</div>
              <div class="text-neutral-700">hogere klantbetrokkenheid</div>
            </div>
            
            <div class="border-l-4 border-secondary pl-4">
              <div class="text-2xl font-bold text-secondary">3x</div>
              <div class="text-neutral-700">sneller feedback van klanten</div>
            </div>
            
            <div class="border-l-4 border-success pl-4">
              <div class="text-2xl font-bold text-success">94%</div>
              <div class="text-neutral-700">klant waardering voor transparantie</div>
            </div>
          </div>
          
          <div class="mt-8 p-4 bg-white rounded-lg">
            <div class="text-center">
              <div class="text-lg font-semibold text-neutral-900 mb-2">
                "Eindelijk een makelaar die mij echt betrekt bij het proces"
              </div>
              <div class="text-sm text-neutral-600">- Klant feedback</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Integration Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          Integreert met je Volledige Workflow
        </h2>
        <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
          Het klantportaal werkt naadloos samen met alle andere Tesoro CRM features.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">Smart Matching</h3>
          <p class="text-neutral-700">
            Nieuwe matches verschijnen automatisch in het klantportaal.
          </p>
        </Card>

        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">Deal Pipeline</h3>
          <p class="text-neutral-700">
            Klantfeedback verplaatst deals automatisch in je pipeline.
          </p>
        </Card>

        <Card variant="default" padding="lg" class="text-center">
          <h3 class="text-lg font-semibold text-neutral-900 mb-3">E-mail Notificaties</h3>
          <p class="text-neutral-700">
            Krijg direct een e-mail wanneer een klant feedback geeft.
          </p>
        </Card>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-secondary text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('feature_pages.customer_portal.cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('feature_pages.customer_portal.cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href={getLocalizedPath('/signup', locale)}>
          {t('feature_pages.customer_portal.cta.primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href={getLocalizedPath('/features', locale)} class="border-2 border-white hover:bg-white hover:text-primary">
          {t('feature_pages.customer_portal.cta.secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>