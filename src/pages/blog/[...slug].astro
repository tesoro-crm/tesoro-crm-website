<Layout
  title={`${title} | Tesoro CRM Blog`}
  description={description}
>
  <!-- Structured Data -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  {faqStructuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(faqStructuredData)} />
  )}

  <article class="blog-article">
    <div class="blog-article__container">
      <div class="grid grid-cols-1 lg:grid-cols-[1fr_320px] gap-8 lg:gap-12 items-start">
        <!-- Left column: Header + Content -->
        <div class="min-w-0">
          <header class="mb-12">
            <div class="blog-article__meta">
              <span class="blog-article__category">{blogData.meta.category}</span>
              <time class="blog-article__date" datetime={blogData.hero.publishDate}>
                {publishDate}
              </time>
              {blogData.meta.readingTime && (
                <span class="blog-article__reading-time">
                  {blogData.meta.readingTime} min {locale === 'nl' ? 'lezen' : locale === 'es' ? 'lectura' : 'read'}
                </span>
              )}
            </div>

            <h1 class="blog-article__title">{title}</h1>
            <p class="blog-article__description">{description}</p>

            <div class="blog-article__hero">
              <ImageWithFallback
                src={heroImage.src}
                alt={heroImage.alt[locale]}
                width={heroImage.width || 1200}
                height={heroImage.height || 600}
                loading="eager"
                class="blog-article__hero-image"
                aspectRatio="2/1"
              />
            </div>

            <div class="blog-article__author">
              <img
                src={author.image}
                alt={author.name}
                width={56}
                height={56}
                loading="eager"
                class="blog-article__author-avatar"
              />
              <div class="blog-article__author-info">
                <div class="blog-article__author-name">{author.name}</div>
                <div class="blog-article__author-bio">{author.bio[locale]}</div>
              </div>
            </div>

            {blogData.meta.aiGenerated && (
              <div class="blog-article__ai-badge" role="note" aria-label="AI generated content">
                ü§ñ {locale === 'nl' ? 'AI-Gegenereerde Content' : locale === 'es' ? 'Contenido Generado por IA' : 'AI-Generated Content'}
                {blogData.meta.aiPrompt && (
                  <details class="blog-article__ai-details">
