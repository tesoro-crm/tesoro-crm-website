---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import { getLocale, loadTranslations, t } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale);
await loadTranslations(locale);

const features = [
  {
    title: t('home.features.feature_1_title', locale),
    description: t('home.features.feature_1_description', locale),
    icon: t('home.features.feature_1_icon', locale),
  },
  {
    title: t('home.features.feature_2_title', locale),
    description: t('home.features.feature_2_description', locale),
    icon: t('home.features.feature_2_icon', locale),
  },
  {
    title: t('home.features.feature_3_title', locale),
    description: t('home.features.feature_3_description', locale),
    icon: t('home.features.feature_3_icon', locale),
  },
];

const stats = [
  { value: t('home.stats.value_1', locale), label: t('home.stats.captaties', locale) },
  { value: t('home.stats.value_2', locale), label: t('home.stats.tijdsbesparing', locale) },
  { value: t('home.stats.value_3', locale), label: t('home.stats.omzet', locale) },
];

const testimonials = [
  {
    quote: t('home.testimonials.testimonial_1_quote', locale),
    author: t('home.testimonials.testimonial_1_author', locale),
    role: t('home.testimonials.testimonial_1_role', locale),
    company: t('home.testimonials.testimonial_1_company', locale),
    image: t('home.testimonials.testimonial_1_image', locale),
  },
  {
    quote: t('home.testimonials.testimonial_2_quote', locale),
    author: t('home.testimonials.testimonial_2_author', locale),
    role: t('home.testimonials.testimonial_2_role', locale),
    company: t('home.testimonials.testimonial_2_company', locale),
    image: t('home.testimonials.testimonial_2_image', locale),
  },
  {
    quote: t('home.testimonials.testimonial_3_quote', locale),
    author: t('home.testimonials.testimonial_3_author', locale),
    role: t('home.testimonials.testimonial_3_role', locale),
    company: t('home.testimonials.testimonial_3_company', locale),
    image: t('home.testimonials.testimonial_3_image', locale),
  },
];

const faqs = [
  {
    question: t('home.faq.question_1', locale),
    answer: t('home.faq.answer_1', locale),
  },
  {
    question: t('home.faq.question_2', locale),
    answer: t('home.faq.answer_2', locale),
  },
  {
    question: t('home.faq.question_3', locale),
    answer: t('home.faq.answer_3', locale),
  },
  {
    question: t('home.faq.question_4', locale),
    answer: t('home.faq.answer_4', locale),
  },
];
---

<Layout 
  title={t('meta.home_title', locale)}
  description={t('meta.home_description', locale)}
>
  <!-- Hero Section - Tesoro Brand -->
  <section class="relative bg-[#FAF9F7] py-16 lg:py-24 overflow-hidden">
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-0 right-0 w-96 h-96 bg-secondary rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-[60%_40%] gap-12 items-center">
        <!-- Left: Content (60%) -->
        <div class="text-center lg:text-left">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-accent/10 text-accent rounded-full text-sm font-medium mb-6">
            {t('home.hero.badge', locale)}
          </div>
          
          <!-- Headline -->
          <h1 class="text-4xl sm:text-5xl lg:text-[56px] font-display font-bold mb-6 leading-[1.1] text-primary">
            {t('home.hero.headline', locale)}
          </h1>
          
          <!-- Subheadline -->
          <p class="text-lg sm:text-xl text-primary/70 mb-8 max-w-2xl mx-auto lg:mx-0 leading-relaxed">
            {t('home.hero.subheadline', locale)}
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
            <a 
              href="#contact" 
              class="inline-flex items-center justify-center px-8 py-4 bg-accent hover:bg-accent-dark text-white font-semibold rounded-lg transition-all duration-200 hover:scale-105 hover:shadow-lg"
            >
              {t('home.hero.cta_primary', locale)}
            </a>
            <a 
              href="#demo" 
              class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-primary text-primary hover:bg-primary hover:text-white font-semibold rounded-lg transition-all duration-200"
            >
              {t('home.hero.cta_secondary', locale)}
            </a>
          </div>
          
          <!-- Trust Bar -->
          <div class="flex flex-wrap items-center gap-4 sm:gap-6 text-sm text-primary/60 justify-center lg:justify-start">
            <span class="flex items-center gap-2">
              <span class="text-accent text-xl">âœ“</span>
              <span class="font-medium">{t('home.hero.trust_pricing', locale)}</span>
            </span>
            <span class="flex items-center gap-2">
              <span class="text-accent text-xl">âœ“</span>
              <span class="font-medium">{t('home.hero.trust_integration', locale)}</span>
            </span>
            <span class="flex items-center gap-2">
              <span class="text-accent text-xl">âœ“</span>
              <span class="font-medium">{t('home.hero.trust_commitment', locale)}</span>
            </span>
          </div>
        </div>
        
        <!-- Right: Visual (40%) -->
        <div class="hidden lg:block">
          <div class="relative">
            <!-- Floating metric card (top right) -->
            <div class="absolute -top-4 -right-4 bg-white rounded-xl shadow-xl p-4 z-20">
              <div class="text-sm text-primary/60 mb-1">Matching/dÃ­a</div>
              <div class="text-3xl font-bold text-primary">2x</div>
              <div class="text-xs text-accent font-medium">AutomÃ¡tico</div>
            </div>
            
            <!-- Main visual placeholder (Kanban interface) -->
            <div class="relative bg-white rounded-xl shadow-2xl p-6 border border-neutral-200">
              <div class="aspect-[4/3] bg-gradient-to-br from-neutral-50 to-neutral-100 rounded-lg flex items-center justify-center">
                <div class="text-center">
                  <div class="text-6xl mb-4">ðŸ“Š</div>
                  <div class="text-sm text-primary/60 font-medium">Kanban Interface</div>
                  <div class="text-xs text-primary/40">Screenshot placeholder</div>
                </div>
              </div>
            </div>
            
            <!-- Floating feature badge (bottom) -->
            <div class="absolute -bottom-4 left-1/2 -translate-x-1/2 bg-accent text-white px-6 py-3 rounded-full shadow-lg text-sm font-semibold whitespace-nowrap z-20">
              Matching automÃ¡tico en tiempo real
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats Bar -->
  <section class="bg-white border-b border-neutral-200 py-8">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
        {stats.map((stat) => (
          <div>
            <div class="text-4xl font-display font-bold text-primary mb-2">{stat.value}</div>
            <div class="text-neutral-600">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Social Proof -->
  <section class="bg-neutral-50 py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <p class="text-neutral-600 mb-6">{t('home.social_proof.title', locale)}</p>
      <div class="flex flex-wrap items-center justify-center gap-8 opacity-60">
        <div class="text-2xl font-bold text-neutral-400">Funda</div>
        <div class="text-2xl font-bold text-neutral-400">Idealista</div>
        <div class="text-2xl font-bold text-neutral-400">Kyero</div>
        <div class="text-2xl font-bold text-neutral-400">Fotocasa</div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.features.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.features.description', locale)}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <Card variant="default" padding="lg" class="hover:-translate-y-1 transition-transform duration-200">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-display font-semibold text-neutral-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-neutral-600">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.testimonials.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.testimonials.subtitle', locale)}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <Card variant="default" padding="lg" class="flex flex-col">
            <p class="text-neutral-700 mb-6 flex-grow italic">"{testimonial.quote}"</p>
            <div class="flex items-center gap-4">
              <div class="text-4xl">{testimonial.image}</div>
              <div>
                <div class="font-semibold text-neutral-900">{testimonial.author}</div>
                <div class="text-sm text-neutral-600">{testimonial.role}</div>
                <div class="text-sm text-neutral-500">{testimonial.company}</div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Demo Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-4">
            {t('home.demo.badge', locale)}
          </Badge>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            {t('home.demo.title', locale)}
          </h2>
          <p class="text-lg text-neutral-600 mb-8">
            {t('home.demo.description', locale)}
          </p>
          <ul class="space-y-4 mb-8">
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_1', locale)}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_2', locale)}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_3', locale)}</span>
            </li>
          </ul>
          <Button variant="primary" size="lg" href="/demo">
            {t('home.demo.cta', locale)}
          </Button>
        </div>
        <div>
          <Card variant="elevated" class="aspect-video bg-gradient-to-br from-neutral-100 to-neutral-200 flex items-center justify-center">
            <span class="text-6xl">ðŸŽ¬</span>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.faq.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600">
          {t('home.faq.subtitle', locale)}
        </p>
      </div>
      
      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card variant="default" padding="lg">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">{faq.question}</h3>
            <p class="text-neutral-600">{faq.answer}</p>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-4">{t('home.faq.more_questions', locale)}</p>
        <Button variant="outline" href="/contact">
          {t('home.faq.contact_cta', locale)}
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-primary-accent text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('home.final_cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('home.final_cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="/signup">
          {t('home.final_cta.cta_primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href="/pricing" class="border-2 border-white hover:bg-white hover:text-primary">
          {t('home.final_cta.cta_secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
