    description: 'Klant geeft feedback via eenvoudige knoppen: interessant, niet interessant, misschien.',
  },
  {
    step: '6',
    title: 'Automatische Update CRM',
    description: 'Feedback wordt real-time doorgegeven aan jouw CRM en deal pipeline.',
  },
];

const feedbackOptions = [
  {
    type: 'Interessant',
    description: 'Klant wil meer informatie of een bezichtiging plannen',
