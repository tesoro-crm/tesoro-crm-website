    .blog-article__newsletter-input,
    .blog-article__newsletter-submit {
      width: 100%;
    }

    .blog-article__footer {
      padding: 2.5rem 0;
    }
  }

  @media (max-width: 640px) {
    .blog-article__meta {
      flex-wrap: wrap;
      gap: 0.75rem;
    }

    .blog-article__content blockquote {
      padding-left: 1.25rem;
      font-size: 1.0625rem;
    }
  }

  /* Print styles */
  @media print {
    .blog-article {
      background: white;
      padding: 0;
    }

    .blog-article__container {
      max-width: none;
      padding: 0;
    }

    .blog-article__sidebar,
    .blog-article__share,
    .blog-article__newsletter {
      display: none;
    }

    .blog-article__content {
      box-shadow: none;
      border: none;
      padding: 0;
    }
  }
</style>
