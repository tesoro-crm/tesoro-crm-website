---
import Layout from '../../layouts/Layout.astro';
import RelatedPosts from '../../components/blog/RelatedPosts.astro';
import { getCollection } from 'astro:content';
import { getLocale } from '../../i18n/utils';
import type { Language } from '../../i18n/config';

export async function getStaticPaths() {
  const posts = await getCollection('blog');

  // Group by locale (fallback to default locale)
  const paths = posts
    .filter(post => !post.data.draft)
    .map(post => ({
      params: { slug: post.slug },
      props: { post },
    }));

  return paths;
}

const { post } = Astro.props;
const { Content, headings } = await post.render();
const locale: Language = getLocale(Astro.currentLocale, Astro.url);
---

<Layout
  title={`${post.data.title} | Tesoro CRM Blog`}
  description={post.data.description}
>
  <article class="blog-article">
    <div class="blog-article__container">
      <header class="blog-article__header">
        <div class="blog-article__meta">
          <span class="blog-article__category">{post.data.category}</span>
          <time class="blog-article__date" datetime={post.data.pubDate.toISOString()}>
            {post.data.pubDate.toLocaleDateString(locale === 'nl' ? 'nl-NL' : locale === 'es' ? 'es-ES' : 'en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          {post.data.readingTime && (
            <span class="blog-article__reading-time">{post.data.readingTime} min read</span>
          )}
        </div>

        <h1 class="blog-article__title">{post.data.title}</h1>
        <p class="blog-article__description">{post.data.description}</p>

        {post.data.heroImage && (
          <div class="blog-article__hero">
            <img
              class="blog-article__hero-image"
              src={post.data.heroImage}
              alt={post.data.title}
              loading="eager"
              width="800"
              height="400"
            />
          </div>
        )}

        <div class="blog-article__author">
          {post.data.authorImage && (
            <img
              class="blog-article__author-avatar"
              src={post.data.authorImage}
              alt={post.data.author}
              loading="eager"
              width="48"
              height="48"
            />
          )}
          <div class="blog-article__author-info">
            <div class="blog-article__author-name">{post.data.author}</div>
            {post.data.authorBio && (
              <div class="blog-article__author-bio">{post.data.authorBio}</div>
            )}
          </div>
        </div>

        {post.data.aiGenerated && (
          <div class="blog-article__ai-badge" role="note" aria-label="AI generated content">
            ü§ñ AI-Generated Content
            {post.data.aiPrompt && (
              <details class="blog-article__ai-details">
                <summary>View AI Prompt</summary>
                <code>{post.data.aiPrompt}</code>
              </details>
            )}
          </div>
        )}
      </header>

      <div class="blog-article__content-wrapper">
        <main class="blog-article__main">
          <div class="blog-article__content">
            <Content />
          </div>
        </main>

        <aside class="blog-article__sidebar">
          <nav class="blog-article__toc" aria-labelledby="toc-heading">
            <h2 id="toc-heading" class="blog-article__toc-title">Inhoudsopgave</h2>
            <ol class="blog-article__toc-list">
              {headings
                .filter(heading => heading.depth <= 3)
                .map(heading => (
                  <li class={`blog-article__toc-item blog-article__toc-item--${heading.depth}`}>
                    <a href={`#${heading.slug}`} class="blog-article__toc-link">{heading.text}</a>
                  </li>
                ))}
            </ol>
          </nav>
        </aside>
      </div>

      <RelatedPosts currentPost={post} />

      <footer class="blog-article__footer">
        <div class="blog-article__tags" aria-label="Article tags">
          {post.data.tags.map(tag => (
            <span class="blog-article__tag">#{tag}</span>
          ))}
        </div>

        <div class="blog-article__share" aria-label="Share this article">
          <h3 class="blog-article__share-title">Deel dit artikel</h3>
          <div class="blog-article__share-buttons">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.data.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="blog-article__share-button blog-article__share-button--twitter"
              aria-label="Deel op Twitter"
            >
              üê¶ Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="blog-article__share-button blog-article__share-button--linkedin"
              aria-label="Deel op LinkedIn"
            >
              üíº LinkedIn
            </a>
            <a
              href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="blog-article__share-button blog-article__share-button--facebook"
              aria-label="Deel op Facebook"
            >
              üìò Facebook
            </a>
            <button
              class="blog-article__share-button blog-article__share-button--copy"
              onclick={`navigator.clipboard.writeText('${Astro.url.href}')`}
              aria-label="Kopieer link"
            >
              üìã Kopieer Link
            </button>
          </div>
        </div>

        <div class="blog-article__newsletter" aria-labelledby="newsletter-heading">
          <h3 id="newsletter-heading" class="blog-article__newsletter-title">Blijf op de hoogte</h3>
          <p class="blog-article__newsletter-description">
            Krijg de laatste inzichten over CRM en vastgoedmarketing in je inbox.
          </p>
          <form class="blog-article__newsletter-form" data-newsletter-form aria-label="Nieuwsbrief aanmelden">
            <label for="newsletter-email" class="sr-only">Email adres</label>
            <input
              id="newsletter-email"
              type="email"
              placeholder="Jouw email adres"
              required
              class="blog-article__newsletter-input"
              aria-describedby="newsletter-description"
            />
            <button type="submit" class="blog-article__newsletter-submit">
              Abonneren
            </button>
          </form>
          <p id="newsletter-description" class="blog-article__newsletter-privacy">
            We respecteren je privacy. Afmelden kan altijd.
          </p>
        </div>
      </footer>
    </div>
  </article>
</Layout>

<script>
  // Newsletter signup
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.querySelector('[data-newsletter-form]') as HTMLFormElement;
    if (!form) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const emailInput = form.querySelector('input[type="email"]') as HTMLInputElement;
      const email = emailInput?.value;

      try {
        const response = await fetch('/api/newsletter', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });

        if (response.ok) {
          alert('Thanks for subscribing! Check your email.');
          form.reset();
        } else {
          alert('Something went wrong. Please try again.');
        }
      } catch (error) {
        alert('Something went wrong. Please try again.');
      }
    });
  });
</script>

