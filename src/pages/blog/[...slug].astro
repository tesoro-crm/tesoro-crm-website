  }

  /* Screen reader only content */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Focus management for accessibility */
  .blog-article__toc-link:focus,
  .blog-article__share-button:focus,
  .blog-article__newsletter-input:focus,
  .blog-article__newsletter-submit:focus {
    outline: 2px solid #667eea;
    outline-offset: 2px;
  }

