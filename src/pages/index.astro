---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import HeroSimple from '../components/hero/HeroSimple.astro';
import LeadWorkflowSection from '../components/lead/LeadWorkflowSection.astro';
import CoCreated from '../components/sections/CoCreated.astro';
import { getLocale, loadTranslations, t } from '../i18n/utils';
import type { Language } from '../i18n/config';

const locale: Language = getLocale(Astro.currentLocale, Astro.url);
await loadTranslations(locale);

const heroTrust: readonly string[] = [
  t('home.hero.trust_pricing', locale),
  t('home.hero.trust_integration', locale),
  t('home.hero.trust_commitment', locale),
  t('home.hero.trust_ai', locale),
  t('home.hero.trust_realtime', locale),
  t('home.hero.trust_portal', locale),
];

const features = [
  {
    title: t('home.features.feature_1_title', locale),
    description: t('home.features.feature_1_description', locale),
    icon: t('home.features.feature_1_icon', locale),
  },
  {
    title: t('home.features.feature_2_title', locale),
    description: t('home.features.feature_2_description', locale),
    icon: t('home.features.feature_2_icon', locale),
  },
  {
    title: t('home.features.feature_3_title', locale),
    description: t('home.features.feature_3_description', locale),
    icon: t('home.features.feature_3_icon', locale),
  },
];

const testimonials = [
  {
    quote: t('home.testimonials.testimonial_1_quote', locale),
    author: t('home.testimonials.testimonial_1_author', locale),
    role: t('home.testimonials.testimonial_1_role', locale),
    company: t('home.testimonials.testimonial_1_company', locale),
    image: t('home.testimonials.testimonial_1_image', locale),
  },
  {
    quote: t('home.testimonials.testimonial_2_quote', locale),
    author: t('home.testimonials.testimonial_2_author', locale),
    role: t('home.testimonials.testimonial_2_role', locale),
    company: t('home.testimonials.testimonial_2_company', locale),
    image: t('home.testimonials.testimonial_2_image', locale),
  },
  {
    quote: t('home.testimonials.testimonial_3_quote', locale),
    author: t('home.testimonials.testimonial_3_author', locale),
    role: t('home.testimonials.testimonial_3_role', locale),
    company: t('home.testimonials.testimonial_3_company', locale),
    image: t('home.testimonials.testimonial_3_image', locale),
  },
];

const faqs = [
  {
    question: t('home.faq.question_1', locale),
    answer: t('home.faq.answer_1', locale),
  },
  {
    question: t('home.faq.question_2', locale),
    answer: t('home.faq.answer_2', locale),
  },
  {
    question: t('home.faq.question_3', locale),
    answer: t('home.faq.answer_3', locale),
  },
  {
    question: t('home.faq.question_4', locale),
    answer: t('home.faq.answer_4', locale),
  },
];
---

<Layout 
  title={t('meta.home_title', locale)}
  description={t('meta.home_description', locale)}
>
  <HeroSimple 
    headline={t('home.hero.headline', locale)}
    subheadline={t('home.hero.subheadline', locale)}
    ctaPrimary={t('home.hero.cta_primary', locale)}
    ctaSecondary={t('home.hero.cta_secondary', locale)}
    trust={heroTrust}
    kanbanProposed={t('home.hero.kanban_proposed', locale)}
    kanbanInterested={t('home.hero.kanban_interested', locale)}
    kanbanRejected={t('home.hero.kanban_rejected', locale)}
    properties={[
      t('home.hero.property_1', locale),
      t('home.hero.property_2', locale),
      t('home.hero.property_3', locale),
      t('home.hero.property_4', locale),
      t('home.hero.property_5', locale),
      t('home.hero.property_6', locale)
    ]}
  />

  <LeadWorkflowSection />

  <!-- Co-Created Section -->
  <CoCreated locale={locale} />

  <!-- Features Grid -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.features.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.features.description', locale)}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map((feature) => (
          <Card variant="default" padding="lg" class="hover:-translate-y-1 transition-transform duration-200">
            <div class="text-4xl mb-4">{feature.icon}</div>
            <h3 class="text-xl font-display font-semibold text-neutral-900 mb-3">
              {feature.title}
            </h3>
            <p class="text-neutral-600">
              {feature.description}
            </p>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.testimonials.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600 max-w-2xl mx-auto">
          {t('home.testimonials.subtitle', locale)}
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {testimonials.map((testimonial) => (
          <Card variant="default" padding="lg" class="flex flex-col">
            <p class="text-neutral-700 mb-6 flex-grow italic">"{testimonial.quote}"</p>
            <div class="flex items-center gap-4">
              <div class="text-4xl">{testimonial.image}</div>
              <div>
                <div class="font-semibold text-neutral-900">{testimonial.author}</div>
                <div class="text-sm text-neutral-600">{testimonial.role}</div>
                <div class="text-sm text-neutral-500">{testimonial.company}</div>
              </div>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Demo Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="primary" size="md" class="mb-4">
            {t('home.demo.badge', locale)}
          </Badge>
          <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-6">
            {t('home.demo.title', locale)}
          </h2>
          <p class="text-lg text-neutral-600 mb-8">
            {t('home.demo.description', locale)}
          </p>
          <ul class="space-y-4 mb-8">
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_1', locale)}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_2', locale)}</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="text-success text-xl">âœ“</span>
              <span class="text-neutral-700">{t('home.demo.feature_3', locale)}</span>
            </li>
          </ul>
          <Button variant="primary" size="lg" href="/demo">
            {t('home.demo.cta', locale)}
          </Button>
        </div>
        <div>
          <Card variant="elevated" class="aspect-video bg-gradient-to-br from-neutral-100 to-neutral-200 flex items-center justify-center">
            <span class="text-6xl">ðŸŽ¬</span>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-display font-bold text-neutral-900 mb-4">
          {t('home.faq.title', locale)}
        </h2>
        <p class="text-lg text-neutral-600">
          {t('home.faq.subtitle', locale)}
        </p>
      </div>
      
      <div class="space-y-4">
        {faqs.map((faq) => (
          <Card variant="default" padding="lg">
            <h3 class="text-lg font-semibold text-neutral-900 mb-3">{faq.question}</h3>
            <p class="text-neutral-600">{faq.answer}</p>
          </Card>
        ))}
      </div>

      <div class="text-center mt-12">
        <p class="text-neutral-600 mb-4">{t('home.faq.more_questions', locale)}</p>
        <Button variant="outline" href="/contact">
          {t('home.faq.contact_cta', locale)}
        </Button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gradient-to-r from-primary to-primary-accent text-white py-16 lg:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl text-center">
      <h2 class="text-3xl lg:text-4xl font-display font-bold mb-6">
        {t('home.final_cta.title', locale)}
      </h2>
      <p class="text-lg text-white/90 mb-8 max-w-2xl mx-auto">
        {t('home.final_cta.description', locale)}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button variant="secondary" size="lg" href="/signup">
          {t('home.final_cta.cta_primary', locale)}
        </Button>
        <Button variant="ghost" size="lg" href="/pricing" class="border-2 border-white hover:bg-white hover:text-primary">
          {t('home.final_cta.cta_secondary', locale)}
        </Button>
      </div>
    </div>
  </section>
</Layout>
